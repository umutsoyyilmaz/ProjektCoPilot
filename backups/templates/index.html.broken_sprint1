<script>
// ============== PROJECT MANAGEMENT ==============
let globalProjectIdForEdit = null;

function switchProjectTab(tabId, tabEl) {
    document.querySelectorAll('#projectDetailModal .tab-item').forEach(t => t.classList.remove('active'));
    tabEl.classList.add('active');
    document.querySelectorAll('.proj-tab-content').forEach(c => c.style.display = 'none');
    document.getElementById(tabId).style.display = 'block';
}

// Completion slider
document.getElementById('projCompletion')?.addEventListener('input', function() {
    document.getElementById('projCompletionValue').textContent = this.value + '%';
});

async function loadProjectsGrid() {
    try {
        const response = await fetch('/api/projects');
        const projects = await response.json();
        const grid = document.getElementById('projects-grid');
        
        if(projects.length === 0) {
            grid.innerHTML = '<div style="text-align:center;color:#999;padding:40px;grid-column:1/-1;">No projects yet. Click "New Project" to create one.</div>';
            return;
        }
        
        grid.innerHTML = projects.map(p => {
            const phaseColors = {
                'Discover': '#E3F2FD', 'Prepare': '#F3E5F5', 'Explore': '#FFF3E0',
                'Realize': '#E8F5E9', 'Deploy': '#FFEBEE', 'Run': '#E0F7FA'
            };
            const statusColors = {
                'Planning': 'blue', 'Active': 'green', 'On Hold': 'orange', 'Completed': 'green', 'Cancelled': 'red'
            };
            const bgColor = phaseColors[p.current_phase] || '#f8f9fa';
            
            return '<div class="smart-card" style="padding:20px;cursor:pointer;border-left:4px solid var(--primary);background:' + bgColor + ';" onclick="openProjectDetail(' + p.id + ')">' +
                '<div style="display:flex;justify-content:space-between;align-items:start;margin-bottom:15px;">' +
                '<div>' +
                '<h3 style="margin:0;font-size:16px;">' + (p.project_code || 'P' + p.id) + '</h3>' +
                '<div style="font-size:14px;color:var(--text-secondary);margin-top:4px;">' + (p.project_name || p.name || 'Unnamed') + '</div>' +
                '</div>' +
                '<span class="pill ' + (statusColors[p.status] || 'blue') + '">' + (p.status || 'Planning') + '</span>' +
                '</div>' +
                '<div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;font-size:12px;color:var(--text-secondary);">' +
                '<div>üè¢ ' + (p.customer_name || '-') + '</div>' +
                '<div>üìç ' + (p.current_phase || '-') + '</div>' +
                '<div>‚öôÔ∏è ' + (p.deployment_type || '-') + '</div>' +
                '<div>üìÖ ' + (p.golive_planned || '-') + '</div>' +
                '</div>' +
                (p.sap_modules ? '<div style="margin-top:12px;display:flex;flex-wrap:wrap;gap:5px;">' + 
                    p.sap_modules.split(',').map(m => '<span class="pill blue" style="font-size:10px;padding:2px 6px;">' + m.trim() + '</span>').join('') + 
                '</div>' : '') +
                (p.completion_percent ? '<div style="margin-top:12px;"><div style="background:#ddd;height:6px;border-radius:3px;"><div style="background:var(--primary);height:6px;border-radius:3px;width:' + p.completion_percent + '%;"></div></div><div style="font-size:11px;color:#666;margin-top:4px;">' + p.completion_percent + '% Complete</div></div>' : '') +
                '</div>';
        }).join('');
    } catch(error) {
        console.error('Error loading projects:', error);
    }
}

async function openProjectDetail(id) {
    globalProjectIdForEdit = id;
    try {
        const response = await fetch('/api/projects/' + id);
        const p = await response.json();
        
        document.getElementById('projectDetailTitle').textContent = 'üìÅ ' + (p.project_code || 'Project') + ' - ' + (p.project_name || p.name || '');
        
        // Basic Info
        document.getElementById('projCode').value = p.project_code || '';
        document.getElementById('projName').value = p.project_name || p.name || '';
        document.getElementById('projDescription').value = p.description || '';
        document.getElementById('projPhase').value = p.current_phase || 'Discover';
        document.getElementById('projStatus').value = p.status || 'Planning';
        document.getElementById('projBudget').value = p.total_budget || '';
        document.getElementById('projCompletion').value = p.completion_percent || 0;
        document.getElementById('projCompletionValue').textContent = (p.completion_percent || 0) + '%';
        
        // Customer
        document.getElementById('projCustomerName').value = p.customer_name || '';
        document.getElementById('projIndustry').value = p.customer_industry || '';
        document.getElementById('projCountry').value = p.customer_country || '';
        document.getElementById('projContact').value = p.customer_contact || '';
        document.getElementById('projEmail').value = p.customer_email || '';
        
        // SAP Config
        document.getElementById('projDeployment').value = p.deployment_type || '';
        document.getElementById('projApproach').value = p.implementation_approach || '';
        
        // Modules checkboxes
        document.querySelectorAll('input[name="projModule"]').forEach(cb => cb.checked = false);
        if(p.sap_modules) {
            p.sap_modules.split(',').forEach(m => {
                const cb = document.querySelector('input[name="projModule"][value="' + m.trim() + '"]');
                if(cb) cb.checked = true;
            });
        }
        
        // Team
        document.getElementById('projPM').value = p.project_manager || '';
        document.getElementById('projArchitect').value = p.solution_architect || '';
        document.getElementById('projFuncLead').value = p.functional_lead || '';
        document.getElementById('projTechLead').value = p.technical_lead || '';
        
        // Timeline
        document.getElementById('projStartDate').value = p.start_date || '';
        document.getElementById('projGolivePlanned').value = p.golive_planned || '';
        document.getElementById('projGoliveActual').value = p.golive_actual || '';
        
        // Reset to first tab
        document.querySelectorAll('#projectDetailModal .tab-item').forEach((t,i) => t.classList.toggle('active', i===0));
        document.querySelectorAll('.proj-tab-content').forEach((c,i) => c.style.display = i===0 ? 'block' : 'none');
        
        document.getElementById('projectDetailModal').style.display = 'block';
    } catch(error) {
        console.error('Error:', error);
        showToast('Error loading project');
    }
}

function openNewProjectModal() {
    globalProjectIdForEdit = null;
    
    // Clear all fields
    document.getElementById('projectDetailTitle').textContent = 'üìÅ New Project';
    document.getElementById('projCode').value = '';
    document.getElementById('projName').value = '';
    document.getElementById('projDescription').value = '';
    document.getElementById('projPhase').value = 'Discover';
    document.getElementById('projStatus').value = 'Planning';
    document.getElementById('projBudget').value = '';
    document.getElementById('projCompletion').value = 0;
    document.getElementById('projCompletionValue').textContent = '0%';
    document.getElementById('projCustomerName').value = '';
    document.getElementById('projIndustry').value = '';
    document.getElementById('projCountry').value = '';
    document.getElementById('projContact').value = '';
    document.getElementById('projEmail').value = '';
    document.getElementById('projDeployment').value = '';
    document.getElementById('projApproach').value = '';
    document.querySelectorAll('input[name="projModule"]').forEach(cb => cb.checked = false);
    document.getElementById('projPM').value = '';
    document.getElementById('projArchitect').value = '';
    document.getElementById('projFuncLead').value = '';
    document.getElementById('projTechLead').value = '';
    document.getElementById('projStartDate').value = '';
    document.getElementById('projGolivePlanned').value = '';
    document.getElementById('projGoliveActual').value = '';
    
    // Reset to first tab
    document.querySelectorAll('#projectDetailModal .tab-item').forEach((t,i) => t.classList.toggle('active', i===0));
    document.querySelectorAll('.proj-tab-content').forEach((c,i) => c.style.display = i===0 ? 'block' : 'none');
    
    document.getElementById('projectDetailModal').style.display = 'block';
}

async function saveProjectDetail() {
    const modules = Array.from(document.querySelectorAll('input[name="projModule"]:checked')).map(cb => cb.value).join(',');
    
    const data = {
        project_code: document.getElementById('projCode').value,
        project_name: document.getElementById('projName').value,
        description: document.getElementById('projDescription').value,
        current_phase: document.getElementById('projPhase').value,
        status: document.getElementById('projStatus').value,
        total_budget: document.getElementById('projBudget').value || null,
        completion_percent: document.getElementById('projCompletion').value,
        customer_name: document.getElementById('projCustomerName').value,
        customer_industry: document.getElementById('projIndustry').value,
        customer_country: document.getElementById('projCountry').value,
        customer_contact: document.getElementById('projContact').value,
        customer_email: document.getElementById('projEmail').value,
        deployment_type: document.getElementById('projDeployment').value,
        implementation_approach: document.getElementById('projApproach').value,
        sap_modules: modules,
        project_manager: document.getElementById('projPM').value,
        solution_architect: document.getElementById('projArchitect').value,
        functional_lead: document.getElementById('projFuncLead').value,
        technical_lead: document.getElementById('projTechLead').value,
        start_date: document.getElementById('projStartDate').value,
        golive_planned: document.getElementById('projGolivePlanned').value,
        golive_actual: document.getElementById('projGoliveActual').value
    };
    
    if(!data.project_code || !data.project_name) {
        alert('Project Code and Name are required!');
        return;
    }
    
    try {
        const url = globalProjectIdForEdit ? '/api/projects/' + globalProjectIdForEdit : '/api/projects';
        const method = globalProjectIdForEdit ? 'PUT' : 'POST';
        
        await fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        closeModal('projectDetailModal');
        loadProjectsGrid();
        loadGlobalProjectDropdown();
        showToast(globalProjectIdForEdit ? 'Project updated!' : 'Project created!');
    } catch(error) {
        console.error('Error:', error);
        showToast('Error saving project');
    }
}

async function deleteProject() {
    if(!globalProjectIdForEdit) return;
    if(!confirm('Are you sure you want to delete this project? This cannot be undone.')) return;
    
    try {
        await fetch('/api/projects/' + globalProjectIdForEdit, { method: 'DELETE' });
        closeModal('projectDetailModal');
        loadProjectsGrid();
        loadGlobalProjectDropdown();
        showToast('Project deleted');
    } catch(error) {
        console.error('Error:', error);
    }
}
</script>
<script>
// ============== SCENARIOS ==============
async function loadScenariosForProject() {
    if(!globalProjectId) {
        document.getElementById('scenarios-grid').innerHTML = '<div style="text-align:center;color:#999;padding:40px;grid-column:1/-1;">Select a project to view scenarios</div>';
        return;
    }
    
    try {
        const response = await fetch('/api/scenarios?project_id=' + globalProjectId);
        const scenarios = await response.json();
        const grid = document.getElementById('scenarios-grid');
        
        if(scenarios.length === 0) {
            grid.innerHTML = '<div style="text-align:center;color:#999;padding:40px;grid-column:1/-1;">No scenarios yet. Click "New Scenario" to create one.</div>';
            return;
        }
        
        grid.innerHTML = scenarios.map(s => {
            const statusColors = { 'Draft': 'blue', 'In Analysis': 'orange', 'Completed': 'green' };
            const priorityColors = { 'High': 'red', 'Medium': 'orange', 'Low': 'green' };
            
            return '<div class="smart-card" style="padding:20px;cursor:pointer;border-left:4px solid var(--primary);" onclick="openScenarioDetail(' + s.id + ')">' +
                '<div style="display:flex;justify-content:space-between;align-items:start;margin-bottom:15px;">' +
                '<div>' +
                '<h3 style="margin:0;font-size:16px;">' + (s.scenario_id || 'S-' + s.id) + '</h3>' +
                '<div style="font-size:14px;color:var(--text-secondary);margin-top:4px;">' + (s.name || 'Unnamed') + '</div>' +
                '</div>' +
                '<span class="pill ' + (statusColors[s.status] || 'blue') + '">' + (s.status || 'Draft') + '</span>' +
                '</div>' +
                '<div style="font-size:13px;color:var(--text-secondary);margin-bottom:10px;">' + (s.description || '-').substring(0, 100) + '</div>' +
                '<div style="display:flex;gap:15px;font-size:12px;color:var(--text-secondary);">' +
                '<div>üìÅ ' + (s.process_area || '-') + '</div>' +
                '<div><span class="pill ' + (priorityColors[s.priority] || 'blue') + '" style="font-size:10px;">' + (s.priority || 'Medium') + '</span></div>' +
                '</div>' +
                '</div>';
        }).join('');
    } catch(error) {
        console.error('Error loading scenarios:', error);
    }
}

let currentScenarioId = null;

function openAddScenarioModal() {
    currentScenarioId = null;
    document.getElementById('scenarioModalTitle').textContent = '‚ú® New Scenario';
    document.getElementById('scenarioName').value = '';
    document.getElementById('scenarioDescription').value = '';
    document.getElementById('scenarioProcessArea').value = '';
    document.getElementById('scenarioPriority').value = 'Medium';
    document.getElementById('scenarioStatus').value = 'Draft';
    document.getElementById('scenarioModal').style.display = 'block';
}

async function openScenarioDetail(id) {
    currentScenarioId = id;
    try {
        const response = await fetch('/api/scenarios/' + id);
        const s = await response.json();
        
        document.getElementById('scenarioModalTitle').textContent = 'üìã ' + (s.scenario_id || 'Scenario');
        document.getElementById('scenarioName').value = s.name || '';
        document.getElementById('scenarioDescription').value = s.description || '';
        document.getElementById('scenarioProcessArea').value = s.process_area || '';
        document.getElementById('scenarioPriority').value = s.priority || 'Medium';
        document.getElementById('scenarioStatus').value = s.status || 'Draft';
        document.getElementById('scenarioModal').style.display = 'block';
    } catch(error) {
        console.error('Error:', error);
        showToast('Error loading scenario');
    }
}

async function saveScenario() {
    const data = {
        project_id: globalProjectId,
        name: document.getElementById('scenarioName').value,
        description: document.getElementById('scenarioDescription').value,
        process_area: document.getElementById('scenarioProcessArea').value,
        priority: document.getElementById('scenarioPriority').value,
        status: document.getElementById('scenarioStatus').value
    };
    
    if(!data.name) { alert('Scenario name is required!'); return; }
    if(!globalProjectId) { alert('Please select a project first!'); return; }
    
    try {
        const url = currentScenarioId ? '/api/scenarios/' + currentScenarioId : '/api/scenarios';
        const method = currentScenarioId ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        
        closeModal('scenarioModal');
        loadScenariosForProject();
        showToast(currentScenarioId ? 'Scenario updated!' : 'Scenario created: ' + (result.scenario_id || ''));
    } catch(error) {
        console.error('Error:', error);
    }
}

async function deleteScenario() {
    if(!currentScenarioId) return;
    if(!confirm('Delete this scenario? This cannot be undone.')) return;
    
    try {
        await fetch('/api/scenarios/' + currentScenarioId, { method: 'DELETE' });
        closeModal('scenarioModal');
        loadScenariosForProject();
        showToast('Scenario deleted');
    } catch(error) {
        console.error('Error:', error);
    }
}


// ============== FIX: Eksik WRICEF/Config Fonksiyonlarƒ± ==============

function openAddWricefModal() {
    // Legacy WRICEF register view ‚Äî openAddWricefItemModal ile aynƒ± i≈ülev
    if (typeof openAddWricefItemModal === 'function') {
        openAddWricefItemModal();
    } else {
        document.getElementById('wricefModal') && (document.getElementById('wricefModal').style.display = 'flex');
    }
}

async function saveWricefItem() {
    // WRICEF Item detail modal save
    const id = document.getElementById('wricefItemId')?.value || document.getElementById('wricefFormId')?.value;
    const data = {};
    
    // wricefItemModal alanlarƒ±
    if (document.getElementById('wiTitle')) {
        data.title = document.getElementById('wiTitle')?.value || '';
        data.wricef_type = document.getElementById('wiType')?.value || 'E';
        data.status = document.getElementById('wiStatus')?.value || 'Open';
        data.owner = document.getElementById('wiOwner')?.value || '';
        data.fs_content = document.getElementById('wiFsContent')?.value || '';
        data.ts_content = document.getElementById('wiTsContent')?.value || '';
        data.unit_test_steps = document.getElementById('wiUnitSteps')?.value || '[]';
    }
    // wricefModal (add new) alanlarƒ±
    if (document.getElementById('wricefFormTitle')) {
        data.title = document.getElementById('wricefFormTitle')?.value || data.title || '';
        data.wricef_type = document.getElementById('wricefFormType')?.value || data.wricef_type || 'E';
        data.module = document.getElementById('wricefFormModule')?.value || '';
        data.complexity = document.getElementById('wricefFormComplexity')?.value || '';
        data.effort_days = document.getElementById('wricefFormEffort')?.value || 0;
        data.owner = document.getElementById('wricefFormAssigned')?.value || data.owner || '';
    }
    
    if (!data.title) { showToast('Title is required', 'error'); return; }
    
    try {
        if (id) {
            await fetch(`/api/wricef-items/${id}`, {
                method: 'PUT', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
        } else {
            data.project_id = globalProjectId;
            await fetch('/api/wricef-items', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
        }
        showToast('WRICEF item saved!', 'success');
        closeModal('wricefItemModal');
        closeModal('wricefModal');
        if (typeof loadWricefList === 'function') loadWricefList();
    } catch(e) {
        showToast('Error saving: ' + e.message, 'error');
    }
}

async function saveConfigItem() {
    // Config Item detail modal save
    const id = document.getElementById('configItemId')?.value;
    const data = {
        title: document.getElementById('ciTitle')?.value || '',
        status: document.getElementById('ciStatus')?.value || 'Open',
        owner: document.getElementById('ciOwner')?.value || '',
        config_details: document.getElementById('ciConfigDetails')?.value || '',
        unit_test_steps: document.getElementById('ciUnitSteps')?.value || '[]'
    };
    
    if (!data.title) { showToast('Title is required', 'error'); return; }
    
    try {
        if (id) {
            await fetch(`/api/config-items/${id}`, {
                method: 'PUT', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
        } else {
            data.project_id = globalProjectId;
            await fetch('/api/config-items', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
        }
        showToast('Config item saved!', 'success');
        closeModal('configItemModal');
        if (typeof loadConfigList === 'function') loadConfigList();
    } catch(e) {
        showToast('Error saving: ' + e.message, 'error');
    }
}

</script>
