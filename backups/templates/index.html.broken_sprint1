async function viewRiskDetails(id) {
    currentRiskId = id;
    try {
        const response = await fetch("/api/risks/" + id);
        const r = await response.json();
        document.getElementById("riskDetailTitle").textContent = r.item_id || (r.type === "Risk" ? "RSK-" : "ISS-") + String(id).padStart(3, "0");
        document.getElementById("riskDetailType").value = r.type || "Risk";
        document.getElementById("riskDetailStatus").value = r.status || "Open";
        document.getElementById("riskDetailCategory").value = r.category || "Technical";
        document.getElementById("riskDetailTitleInput").value = r.title || "";
        document.getElementById("riskDetailDesc").value = r.description || "";
        document.getElementById("riskDetailImpact").value = r.impact || "Medium";
        document.getElementById("riskDetailProbability").value = r.probability || "Medium";
        document.getElementById("riskDetailOwner").value = r.owner || "";
        document.getElementById("riskDetailMitigation").value = r.mitigation_plan || "";
        // Load scenarios for risk linking
            const scenResp = await fetch("/api/scenarios?project_id=" + globalProjectId);
            const scenarios = await scenResp.json();
            const scenSelect = document.getElementById("riskDetailScenario");
            scenSelect.innerHTML = '<option value="">-- No Scenario --</option>';
            scenarios.forEach(s => {
                scenSelect.innerHTML += '<option value="' + s.id + '"' + (s.id == r.scenario_id ? ' selected' : '') + '>' + (s.name || 'SCN-' + s.id) + '</option>';
            });
            
            // Load gaps for risk linking
            const gapsResp2 = await fetch("/api/fitgap?session_id=" + currentSessionId);
            const gaps2 = await gapsResp2.json();
            const gapSelect2 = document.getElementById("riskDetailGap");
            gapSelect2.innerHTML = '<option value="">-- No Gap Linked --</option>';
            gaps2.forEach(g => {
                gapSelect2.innerHTML += '<option value="' + g.id + '"' + (g.id == r.related_gap_id ? ' selected' : '') + '>' + (g.item_id || 'GAP-' + g.id) + '</option>';
            });
            
            // Load WRICEFs for risk linking
            const wricefResp2 = await fetch("/api/wricef?project_id=" + globalProjectId);
            const wricefs2 = await wricefResp2.json();
            const wricefSelect2 = document.getElementById("riskDetailWricef");
            wricefSelect2.innerHTML = '<option value="">-- No WRICEF Linked --</option>';
            wricefs2.forEach(w => {
                wricefSelect2.innerHTML += '<option value="' + w.id + '"' + (w.id == r.related_wricef_id ? ' selected' : '') + '>' + (w.wricef_id || w.name || 'WRICEF-' + w.id) + '</option>';
            });
            
            document.getElementById("riskDetailModal").style.display = "block";
    } catch(error) {
        console.error("Error:", error);
        showToast("Error loading risk");
    }
}

async function saveRiskDetail() {
    const impactMap = {"High": 3, "Medium": 2, "Low": 1};
    const probMap = {"High": 3, "Medium": 2, "Low": 1};
    const impact = document.getElementById("riskDetailImpact").value;
    const probability = document.getElementById("riskDetailProbability").value;
    const data = {
        type: document.getElementById("riskDetailType").value,
        status: document.getElementById("riskDetailStatus").value,
        category: document.getElementById("riskDetailCategory").value,
        title: document.getElementById("riskDetailTitleInput").value,
        description: document.getElementById("riskDetailDesc").value,
        impact: impact,
        probability: probability,
        risk_score: impactMap[impact] * probMap[probability],
        owner: document.getElementById("riskDetailOwner").value,
        mitigation_plan: document.getElementById("riskDetailMitigation").value,
                title: document.getElementById("riskDetailTitleInput").value,
                category: document.getElementById("riskDetailCategory").value,
                impact: document.getElementById("riskDetailImpact").value,
                probability: document.getElementById("riskDetailProbability").value,
                status: document.getElementById("riskDetailStatus").value,
                scenario_id: document.getElementById("riskDetailScenario").value || null,
                related_gap_id: document.getElementById("riskDetailGap").value || null,
                related_wricef_id: document.getElementById("riskDetailWricef").value || null
    };
    try {
        await fetch("/api/risks/" + currentRiskId, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        closeModal("riskDetailModal");
        loadRisksForSession(currentSessionId);
        showToast("Risk updated!");
    } catch(error) {
        console.error("Error:", error);
    }
}

function createActionFromRisk() {
    closeModal("riskDetailModal");
    openAddActionModal();
    showToast("Create action for risk mitigation");
}

function filterSessions() {
    loadSessionsForGlobalProject();
}
// ============== DESIGN (FS/TS) ==============
let currentDocumentId = null;
let currentDocFilter = 'all';

async function loadDocuments() {
    const tbody = document.getElementById('documents-table-body');
    if(!tbody) return;
    
    if(!globalProjectId) {
        tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">Please select a project from the header first.</td></tr>';
        return;
    }
    
    try {
        const response = await fetch(`/api/documents?project_id=${globalProjectId}`);
        const documents = await response.json();
        
        // Filter if needed
        let filtered = documents;
        if(currentDocFilter !== 'all') {
            filtered = documents.filter(d => d.document_type === currentDocFilter);
        }
        
        if(filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">No documents found. Create your first document!</td></tr>';
            return;
        }
        
        tbody.innerHTML = filtered.map(doc => `
            <tr onclick="openDocument(${doc.id})">
                <td><strong>${doc.document_type}-${doc.requirement_code}</strong></td>
                <td>${doc.requirement_code} - ${doc.requirement_title || ''}</td>
                <td><span class="pill ${doc.document_type === 'FS' ? 'blue' : 'purple'}">${doc.document_type === 'FS' ? 'Functional' : 'Technical'}</span></td>
                <td>v${doc.version || '1.0'}</td>
                <td><span class="pill ${doc.status === 'Approved' ? 'green' : doc.status === 'In Review' ? 'orange' : 'blue'}">${doc.status || 'Draft'}</span></td>
                <td><button class="btn btn-small" onclick="event.stopPropagation(); openDocument(${doc.id})">Open</button></td>
            </tr>
        `).join('');
    } catch(error) {
        console.error('Error loading documents:', error);
        tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">Error loading documents.</td></tr>';
    }
}

function filterDocuments(type, tabEl) {
    document.querySelectorAll('#view-design .tab-item').forEach(t => t.classList.remove('active'));
    tabEl.classList.add('active');
    currentDocFilter = type;
    loadDocuments();
}

async function openDocument(docId) {
    currentDocumentId = docId;
    
    try {
        const response = await fetch(`/api/documents/${docId}`);
        const doc = await response.json();
        
        // Update header
        document.getElementById('docDetailTitle').textContent = `${doc.document_type}-${doc.requirement_code}`;
        document.getElementById('docDetailSubtitle').textContent = `${doc.requirement_title || 'Requirement'} ‚Ä¢ ${doc.document_type === 'FS' ? 'Functional Spec' : 'Technical Spec'}`;
        document.getElementById('docDetailStatus').textContent = doc.status || 'Draft';
        document.getElementById('docDetailStatus').className = `pill ${doc.status === 'Approved' ? 'green' : 'blue'}`;
        
        // Update overview
        document.getElementById('docInfoType').textContent = doc.document_type === 'FS' ? 'Functional Spec' : 'Technical Spec';
        document.getElementById('docInfoVersion').textContent = 'v' + (doc.version || '1.0');
        document.getElementById('docInfoTemplate').textContent = doc.template_used || 'Standard';
        document.getElementById('docInfoStatus').textContent = doc.status || 'Draft';
        
        // Update content
        document.getElementById('docContentArea').value = doc.content || '';
        
        // Switch view
        document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
        document.getElementById('view-document-detail').classList.add('active');
        
        // Reset tabs
        document.querySelectorAll('#view-document-detail .tab-item').forEach(t => t.classList.remove('active'));
        document.querySelector('#view-document-detail .tab-item').classList.add('active');
        document.querySelectorAll('#view-document-detail .tab-content').forEach(c => c.style.display = 'none');
        document.getElementById('doc-overview').style.display = 'block';
        
    } catch(error) {
        console.error('Error:', error);
        showToast('Error loading document');
    }
}

function backToDesign() {
    currentDocumentId = null;
    document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
    document.getElementById('view-design').classList.add('active');
    loadDocuments();
}

function switchDocTab(tabId, tabEl) {
    document.querySelectorAll('#view-document-detail .tab-item').forEach(t => t.classList.remove('active'));
    tabEl.classList.add('active');
    document.querySelectorAll('#view-document-detail .tab-content').forEach(c => c.style.display = 'none');
    document.getElementById(tabId).style.display = 'block';
}

function openNewDocumentModal() {
    if(!globalProjectId) {
        alert('Please select a project first!');
        return;
    }
    document.getElementById('newDocumentModal').style.display = 'block';
    loadRequirementsForDocModal();
}

function closeNewDocumentModal() {
    document.getElementById('newDocumentModal').style.display = 'none';
}

async function loadRequirementsForDocModal() {
    try {
        const response = await fetch(`/api/requirements?project_id=${globalProjectId}`);
        const requirements = await response.json();
        
        const select = document.getElementById('docRequirementSelect');
        select.innerHTML = '<option value="">-- Select Requirement --</option>';
        requirements.forEach(r => {
            select.innerHTML += `<option value="${r.id}">${r.code} - ${r.title}</option>`;
        });
    } catch(error) {
        console.error('Error:', error);
    }
}

async function saveNewDocument() {
    const data = {
        requirement_id: document.getElementById('docRequirementSelect').value,
        document_type: document.getElementById('docTypeSelect').value,
        template_used: document.getElementById('docTemplateSelect').value,
        status: 'Draft'
    };
    
    if(!data.requirement_id || !data.document_type) {
        alert('Please select requirement and document type!');
        return;
    }
    
    try {
        const response = await fetch('/api/documents', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if(response.ok) {
            closeNewDocumentModal();
            loadDocuments();
            showToast('Document created!');
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

async function saveDocumentContent() {
    if(!currentDocumentId) return;
    
    const content = document.getElementById('docContentArea').value;
    
    try {
        const response = await fetch(`/api/documents/${currentDocumentId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ content: content })
        });
        
        if(response.ok) {
            showToast('Content saved!');
        }
    } catch(error) {
        console.error('Error:', error);
        showToast('Error saving content');
    }
}

function generateAIContent() {
    showToast('AI generating content... (Coming soon)');
}

function sendDocChat() {
    const input = document.getElementById('docChatInput');
    const text = input.value;
    if(!text) return;
    
    const area = document.getElementById('docChatArea');
    area.innerHTML += `<div style="text-align:right;margin-bottom:10px;"><span style="background:var(--primary);color:white;padding:8px 12px;border-radius:12px;">${text}</span></div>`;
    input.value = '';
    
    setTimeout(() => {
        area.innerHTML += `<div style="margin-bottom:10px;"><span style="background:white;padding:8px 12px;border-radius:12px;border:1px solid #ddd;">AI: I'll help you with "${text}". This feature is coming soon!</span></div>`;
        area.scrollTop = area.scrollHeight;
    }, 500);
}// ============== TESTING ==============
let currentTestFilter = 'all';

async function loadTestCases() {
    const tbody = document.getElementById('testcases-table-body');
    if(!tbody) return;
    
    if(!globalProjectId) {
        tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">Please select a project from the header first.</td></tr>';
        updateTestStats([]);
        return;
    }
    
    try {
        const response = await fetch(`/api/testcases?project_id=${globalProjectId}`);
        const testcases = await response.json();
        
        updateTestStats(testcases);
        
        // Filter if needed
        let filtered = testcases;
        if(currentTestFilter !== 'all') {
            filtered = testcases.filter(tc => tc.status === currentTestFilter);
        }
        
        if(filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">No test cases found.</td></tr>';
            return;
        }
        
        tbody.innerHTML = filtered.map(tc => `
            <tr>
                <td><strong>${tc.test_case_id || 'TC-' + tc.id}</strong></td>
                <td>${tc.test_scenario || '-'}</td>
                <td><span class="pill blue">${tc.requirement_code || '-'}</span></td>
                <td>${tc.test_type || 'Unit'}</td>
                <td>
                    <select class="form-control" style="width:120px;padding:4px 8px;font-size:12px;" onchange="updateTestStatus(${tc.id}, this.value)">
                        <option value="Not Started" ${tc.status === 'Not Started' ? 'selected' : ''}>Not Started</option>
                        <option value="In Progress" ${tc.status === 'In Progress' ? 'selected' : ''}>In Progress</option>
                        <option value="Passed" ${tc.status === 'Passed' ? 'selected' : ''}>‚úÖ Passed</option>
                        <option value="Failed" ${tc.status === 'Failed' ? 'selected' : ''}>‚ùå Failed</option>
                        <option value="Blocked" ${tc.status === 'Blocked' ? 'selected' : ''}>üö´ Blocked</option>
                    </select>
                </td>
                <td><button class="btn btn-small" onclick="viewTestDetails(${tc.id})">Details</button></td>
            </tr>
        `).join('');
    } catch(error) {
        console.error('Error loading test cases:', error);
    }
}

function updateTestStats(testcases) {
    const total = testcases.length;
    const passed = testcases.filter(tc => tc.status === 'Passed').length;
    const failed = testcases.filter(tc => tc.status === 'Failed').length;
    const pending = testcases.filter(tc => tc.status === 'Not Started').length;
    
    const totalEl = document.querySelector('.stat-total-tests');
    const passedEl = document.querySelector('.stat-passed-tests');
    const failedEl = document.querySelector('.stat-failed-tests');
    const pendingEl = document.querySelector('.stat-pending-tests');
    
    if(totalEl) totalEl.textContent = total;
    if(passedEl) passedEl.textContent = passed;
    if(failedEl) failedEl.textContent = failed;
    if(pendingEl) pendingEl.textContent = pending;
}

function filterTestCases(status, tabEl) {
    document.querySelectorAll('#view-testing .tab-item').forEach(t => t.classList.remove('active'));
    tabEl.classList.add('active');
    currentTestFilter = status;
    loadTestCases();
}

async function updateTestStatus(tcId, status) {
    try {
        const response = await fetch(`/api/testcases/${tcId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: status, executed_by: 'Current User' })
        });
        
        if(response.ok) {
            showToast(`Test status updated to ${status}`);
            loadTestCases();
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

function viewTestDetails(tcId) {
    showToast('Test details view coming soon!');
}

function openNewTestCaseModal() {
    if(!globalProjectId) {
        alert('Please select a project first!');
        return;
    }
    document.getElementById('newTestCaseModal').style.display = 'block';
    loadDocumentsForTestModal();
}

function closeNewTestCaseModal() {
    document.getElementById('newTestCaseModal').style.display = 'none';
}

async function loadDocumentsForTestModal() {
    try {
        const response = await fetch(`/api/documents?project_id=${globalProjectId}`);
        const documents = await response.json();
        
        const select = document.getElementById('testDocumentSelect');
        select.innerHTML = '<option value="">-- Select FS/TS Document --</option>';
        documents.forEach(d => {
            select.innerHTML += `<option value="${d.id}">${d.document_type}-${d.requirement_code}</option>`;
        });
    } catch(error) {
        console.error('Error:', error);
    }
}

async function saveNewTestCase() {
    const data = {
        fs_ts_id: document.getElementById('testDocumentSelect').value,
        test_case_id: document.getElementById('testCaseId').value,
        test_scenario: document.getElementById('testScenario').value,
        test_type: document.getElementById('testType').value,
        preconditions: document.getElementById('testPreconditions').value,
        test_steps: document.getElementById('testSteps').value,
        expected_result: document.getElementById('testExpectedResult').value,
        status: 'Not Started'
    };
    
    if(!data.fs_ts_id || !data.test_scenario) {
        alert('Please select document and enter test scenario!');
        return;
    }
    
    try {
        const response = await fetch('/api/testcases', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if(response.ok) {
            closeNewTestCaseModal();
            loadTestCases();
            showToast('Test case created!');
            // Clear form
            document.getElementById('testCaseId').value = '';
            document.getElementById('testScenario').value = '';
            document.getElementById('testPreconditions').value = '';
            document.getElementById('testSteps').value = '';
            document.getElementById('testExpectedResult').value = '';
        }
    } catch(error) {
        console.error('Error:', error);
    }
}
// ============== REQUIREMENTS ==============
async function loadRequirements() {
    try {
        let url = '/api/requirements';
        if(globalProjectId) url += `?project_id=${globalProjectId}`;
        
        const response = await fetch(url);
        const requirements = await response.json();
        
        renderRequirementsTable(requirements);
        updateRequirementsTabs(requirements);
    } catch(error) {
        console.error('Error:', error);
    }
}

function renderRequirementsTable(requirements) {
    const tbody = document.getElementById('requirements-table-body');
    if(!tbody) return;
    
    if(requirements.length === 0) {
        tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#999;">No requirements found.</td></tr>';
        return;
    }
    
    tbody.innerHTML = requirements.map(req => `
        <tr onclick="loadRequirementDetails(${req.id})">
            <td><b>${req.code || '-'}</b></td>
            <td>${req.title || '-'}</td>
            <td><span class="pill blue">${req.module || '-'}</span></td>
            <td>${req.complexity || '-'}</td>
            <td><span class="pill ${req.status === 'Ready' ? 'green' : 'orange'}">${req.status || '-'}</span></td>
            <td><span style="color:#8900B4;font-size:12px;">${req.ai_status === 'Full' ? '‚ú¶ Full' : '‚óã None'}</span></td>
            <td style="color:var(--primary);">Edit</td>
        </tr>
    `).join('');
}

function updateRequirementsTabs(requirements) {
    const tabs = document.querySelectorAll('#view-requirements .tab-item');
    if(tabs.length >= 4) {
        tabs[0].textContent = `All Objects (${requirements.length})`;
    }
}

function loadRequirementDetails(id) {
    fetch(`/api/requirements/${id}`)
        .then(res => res.json())
        .then(data => {
            document.querySelector('#view-design .page-title').innerText = data.code;
            document.querySelector('#view-design .page-subtitle').innerText = data.title;
            navTo('design');
        })
        .catch(err => console.error('Error:', err));
}

function saveRequirement() {
    if(!globalProjectId) {
        alert('Please select a project first!');
        return;
    }
    
    const data = {
        project_id: globalProjectId,
        code: document.getElementById('newCode').value,
        title: document.getElementById('newTitle').value,
        module: document.getElementById('newModule').value,
        complexity: document.getElementById('newComplexity').value
    };
    
    if(!data.code || !data.title) { alert('Fill all fields!'); return; }
    
    fetch('/api/requirements', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
    }).then(response => {
        if(response.ok) {
            document.getElementById('addModal').style.display = 'none';
            loadRequirements();
            showToast('Requirement saved!');
        }
    });
}
// ============== AI SERVICES ==============

async function generateAIContent() {
    if(!currentDocumentId) {
        showToast('Please open a document first');
        return;
    }
    
    const btn = document.querySelector('#view-document-detail .btn-ai');
    const originalText = btn.innerHTML;
    btn.innerHTML = '<span>‚è≥</span> Generating...';
    btn.disabled = true;
    
    try {
        // Get document info
        const docResponse = await fetch(`/api/documents/${currentDocumentId}`);
        const doc = await docResponse.json();
        
        // Determine endpoint based on document type
        const endpoint = doc.document_type === 'FS' ? '/api/ai/generate-fs' : '/api/ai/generate-ts';
        
        const response = await fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                requirement_code: doc.requirement_code,
                requirement_title: doc.requirement_title,
                module: doc.requirement_code ? doc.requirement_code.split('_')[1] : 'MM'
            })
        });
        
        const result = await response.json();
        
        if(result.status === 'success') {
            // Update content area
            document.getElementById('docContentArea').value = result.content;
            
            // Switch to content tab
            const contentTab = document.querySelectorAll('#view-document-detail .tab-item')[1];
            switchDocTab('doc-content', contentTab);
            
            showToast(`‚ú® AI generated ${doc.document_type} content! (${result.tokens_used} tokens)`);
        }
    } catch(error) {
        console.error('AI generation error:', error);
        showToast('Error generating content');
    } finally {
        btn.innerHTML = originalText;
        btn.disabled = false;
    }
}
async function getAIInsights() {
    if(!globalProjectId) {
        showToast('Please select a project first');
        return;
    }
    
    const insightEl = document.getElementById('ai-insight-text');
    insightEl.innerHTML = 'ü§ñ Analyzing project data...';
    
    try {
        // Get project stats
        const response = await fetch(`/api/dashboard/stats?project_id=${globalProjectId}`);
        const stats = await response.json();
        
        // Generate mock insight based on real data
        const insights = [
            `üìä I found ${stats.total_gaps} gaps in this project. ${stats.total_gaps > 5 ? 'Consider prioritizing critical gaps first.' : 'Gap count is manageable.'}`,
            `üìù ${stats.total_sessions} analysis sessions recorded. ${stats.total_questions} questions documented so far.`,
            `üí° Based on the current progress, I recommend focusing on completing gap resolutions before moving to testing phase.`,
            `üéØ Project "${stats.project_name}" is ${stats.project_status}. ${stats.total_gaps > 0 ? 'There are gaps that need attention.' : 'Looking good!'}`
        ];
        
        // Simulate delay
        setTimeout(() => {
            insightEl.innerHTML = insights[Math.floor(Math.random() * insights.length)];
        }, 1000);
        
    } catch(error) {
        insightEl.innerHTML = 'Error getting insights';
    }
}
async function analyzeGapWithAI(gapId, description) {
    showToast('ü§ñ AI analyzing gap...');
    
    try {
        const response = await fetch('/api/ai/analyze-gap', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ description: description })
        });
        
        const result = await response.json();
        
        if(result.status === 'success') {
            const analysis = result.analysis;
            alert(`ü§ñ AI Analysis (${result.confidence}% confidence)\n\n` +
                  `Recommended Solution: ${analysis.type}\n\n` +
                  `${analysis.description}\n\n` +
                  `Effort Estimate: ${analysis.effort}\n\n` +
                  `üí° ${analysis.recommendation}`);
        }
    } catch(error) {
        console.error('AI analysis error:', error);
        showToast('Error analyzing gap');
    }
}

async function sendDocChat() {
    const input = document.getElementById('docChatInput');
    const text = input.value.trim();
    if(!text) return;
    
    const area = document.getElementById('docChatArea');
    
    // Add user message
    area.innerHTML += `
        <div style="text-align:right;margin-bottom:10px;">
            <span style="background:var(--primary);color:white;padding:8px 12px;border-radius:12px;display:inline-block;max-width:80%;">${text}</span>
        </div>`;
    input.value = '';
    area.scrollTop = area.scrollHeight;
    
    // Show typing indicator
    area.innerHTML += `<div id="typing-indicator" style="margin-bottom:10px;"><span style="color:#999;">ü§ñ AI is typing...</span></div>`;
    area.scrollTop = area.scrollHeight;
    
    try {
        const response = await fetch('/api/ai/chat', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
                message: text,
                context: document.getElementById('docContentArea')?.value || ''
            })
        });
        
        const result = await response.json();
        
        // Remove typing indicator
        document.getElementById('typing-indicator')?.remove();
        
        if(result.status === 'success') {
            // Add AI response
            area.innerHTML += `
                <div style="margin-bottom:10px;">
                    <div style="background:#f0f0f0;padding:12px;border-radius:12px;display:inline-block;max-width:80%;border-left:3px solid #8900B4;">
                        <div style="font-size:11px;color:#8900B4;margin-bottom:5px;">‚ú® AI Co-Pilot</div>
                        ${result.response}
                    </div>
                </div>`;
            
            // Add suggestion buttons
            if(result.suggestions && result.suggestions.length > 0) {
                area.innerHTML += `
                    <div style="margin-bottom:15px;margin-left:10px;">
                        ${result.suggestions.map(s => `<button class="btn btn-small" style="margin-right:5px;margin-bottom:5px;font-size:11px;" onclick="document.getElementById('docChatInput').value='${s}';sendDocChat();">${s}</button>`).join('')}
                    </div>`;
            }
        }
    } catch(error) {
        document.getElementById('typing-indicator')?.remove();
        area.innerHTML += `<div style="margin-bottom:10px;"><span style="color:var(--error);">Error getting AI response</span></div>`;
    }
    
    area.scrollTop = area.scrollHeight;
}

async function askAIAboutGap() {
    const gapDesc = document.getElementById('newGapDescription')?.value;
    if(!gapDesc) {
        showToast('Please enter a gap description first');
        return;
    }
    
    await analyzeGapWithAI(null, gapDesc);
}
// ============== UTILITIES ==============
function showToast(msg) {
    const t = document.getElementById('toast');
    document.getElementById('toast-msg').innerText = msg;
    t.classList.add('show');
    setTimeout(() => t.classList.remove('show'), 3000);
}

function switchTab(tabId, tabEl) {
    document.querySelectorAll('.tab-item').forEach(el => el.classList.remove('active'));
    tabEl.classList.add('active');
    const parent = tabEl.closest('#view-design');
    parent.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
    document.getElementById('tab-' + tabId).style.display = 'block';
}

function sendMessage() {
    const input = document.getElementById('chatInput');
    const text = input.value;
    if(!text) return;
    
    const area = document.getElementById('chatArea');
    area.innerHTML += `<div class="message me"><div class="bubble">${text}</div></div>`;
    input.value = '';
    
    setTimeout(() => {
        area.innerHTML += `<div class="message ai"><div class="bubble">AI response here...</div></div>`;
        area.scrollTop = area.scrollHeight;
    }, 1000);
}

function handleEnter(e) { if(e.key === 'Enter') sendMessage(); }

function startAIGeneration() {
    showToast('AI generating...');
    setTimeout(() => {
        switchTab('technical', document.querySelectorAll('.tab-item')[2]);
        showToast('Generated!');
    }, 2000);
}

