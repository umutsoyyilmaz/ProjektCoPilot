    <script>
// ============== GLOBAL DEƒûƒ∞≈ûKENLER ==============
let globalProjectId = localStorage.getItem('selectedProjectId') || null;
let currentSessionId = null;
let currentFilter = { module: '', status: '', search: '' };

// ============== UYGULAMA BA≈ûLATICI ==============
async function initializeApp() {
    await loadGlobalProjectDropdown();
    
    if(globalProjectId) {
        const select = document.getElementById('globalProjectSelect');
        if(select) select.value = globalProjectId;
        await updateProjectStatus();
    }
    
    navTo('dashboard');
}

async function loadGlobalProjectDropdown() {
    try {
        const response = await fetch('/api/projects');
        const projects = await response.json();
        
        const select = document.getElementById('globalProjectSelect');
        if(!select) return;
        
        select.innerHTML = '<option value="">-- Select Project --</option>';
        projects.forEach(p => {
            select.innerHTML += `<option value="${p.id}">${p.project_code} - ${p.project_name}</option>`;
        });
    } catch(error) {
        console.error('Error loading projects:', error);
    }
}

async function onGlobalProjectChange() {
    const select = document.getElementById('globalProjectSelect');
    globalProjectId = select.value;
    
    if(!globalProjectId) {
        localStorage.removeItem('selectedProjectId');
        document.getElementById('globalProjectStatus').style.display = 'none';
    } else {
        localStorage.setItem('selectedProjectId', globalProjectId);
        await updateProjectStatus();
        showToast('Project selected!');
    }
    
    refreshCurrentView();
}

async function updateProjectStatus() {
    const statusBadge = document.getElementById('globalProjectStatus');
    if(!statusBadge || !globalProjectId) return;
    
    try {
        const response = await fetch(`/api/projects/${globalProjectId}`);
        const project = await response.json();
        statusBadge.textContent = project.status;
        statusBadge.className = `pill ${project.status === 'Active' ? 'green' : 'blue'}`;
        statusBadge.style.display = 'inline-flex';
    } catch(error) {
        console.error('Error:', error);
    }
}

function refreshCurrentView() {
    const activeView = document.querySelector('.view.active');
    if(!activeView) return;
    const viewId = activeView.id.replace('view-', '');
    navTo(viewId);
}

// ============== NAVƒ∞GASYON ==============
function navTo(viewId, navEl) {
    // 1. Sidebar g√ºncelle
    document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
    
    if(navEl) {
        navEl.classList.add('active');
    } else {
        const items = document.querySelectorAll('.nav-item');
        const mapping = { 'dashboard': 0, 'analysis': 1, 'scenarios': 2, 'requirements': 3, 'design': 4, 'testing': 5, 'wricef': 8, 'projects': 6, 'config': 7, 
            'req-management': null,
            'wricef-list': null,
            'config-list': null,
            'test-mgmt': null,
        };
        if(mapping[viewId] !== undefined && items[mapping[viewId]]) {
            items[mapping[viewId]].classList.add('active');
        }
    }

    // 2. View deƒüi≈ütir
    document.querySelectorAll('.view').forEach(el => el.classList.remove('active'));
    const target = document.getElementById('view-' + viewId);
    if(target) target.classList.add('active');

    // 3. Veri y√ºkle
    if(viewId === 'dashboard') loadDashboardStats();
    if(viewId === 'requirements') loadRequirements();
    if(viewId === 'analysis') { loadSessionsForGlobalProject(); loadAnalysisStats(); }
    if(viewId === 'scenarios') loadScenariosForProject();
    if(viewId === 'projects') loadProjectsGrid();
    if(viewId === 'design') loadDocuments();
    if(viewId === 'testing') loadTestCases();
            if(viewId === 'wricef') loadWricefList();
            if(viewId === 'req-management') loadNewRequirements();
            if(viewId === 'wricef-list') loadWricefList();
            if(viewId === 'config-list') loadConfigList();
    // Test pages
    if(viewId === 'test-unit') loadTestsByType('Unit');
    if(viewId === 'test-sit') loadTestsByType('SIT');
    if(viewId === 'test-uat') loadTestsByType('UAT');
    if(viewId === 'test-string') loadTestsByType('String');
    if(viewId === 'test-sprint') loadTestsByType('Sprint');
    if(viewId === 'test-perf') loadTestsByType('PerformanceLoad');
    if(viewId === 'test-regression') loadTestsByType('Regression');
}

// ============== DASHBOARD ==============
// ============== DASHBOARD ==============
async function loadDashboardStats() {
    try {
        let url = '/api/dashboard/stats';
        if(globalProjectId) {
            url += `?project_id=${globalProjectId}`;
        }
        
        const response = await fetch(url);
        const data = await response.json();
        
        // Proje bilgisi g√ºncelle
        const subtitleEl = document.querySelector('#view-dashboard .page-subtitle');
        if(subtitleEl) {
            if(globalProjectId && data.project_name) {
                subtitleEl.textContent = `Project: ${data.project_name} - ${data.project_status}`;
            } else {
                subtitleEl.textContent = 'Select a project from header to see project-specific data';
            }
        }
        
        // ƒ∞statistik kartlarƒ±
        const projectsEl = document.querySelector('.stat-projects');
        if(projectsEl) projectsEl.textContent = data.total_projects || 0;
        
        const gapsEl = document.querySelector('.stat-gaps');
        if(gapsEl) gapsEl.textContent = data.total_gaps || 0;
        
        const sessionsEl = document.querySelector('.stat-sessions');
        if(sessionsEl) sessionsEl.textContent = data.total_sessions || 0;
        
        const questionsEl = document.querySelector('.stat-questions');
        if(questionsEl) questionsEl.textContent = data.total_questions || 0;
        
        // Recent Activities tablosu
        const tbody = document.querySelector('#view-dashboard .smart-table tbody');
        if(tbody && data.recent_activities && data.recent_activities.length > 0) {
            tbody.innerHTML = data.recent_activities.map(activity => `
                <tr onclick="openSession(${activity.id})">
                    <td><b>${activity.session_name}</b></td>
                    <td><span class="pill blue">${activity.module || '-'}</span></td>
                    <td><span class="pill ${activity.status === 'Completed' ? 'green' : 'orange'}">${activity.status}</span></td>
                    <td>${activity.created_at ? 'Recently' : '-'}</td>
                </tr>
            `).join('');
        } else if(tbody) {
            tbody.innerHTML = '<tr><td colspan="4" style="text-align:center;color:#999;">No recent activities</td></tr>';
        }
        
        console.log('Dashboard loaded:', data);
    } catch(error) {
        console.error('Dashboard error:', error);
    }
}
// ============== MODAL FUNCTIONS ==============

function closeModal(modalId) {
    document.getElementById(modalId).style.display = 'none';
}

function openAddAttendeeModal() {
    document.getElementById('addAttendeeModal').style.display = 'block';
}

function openAddAgendaModal() {
    document.getElementById('addAgendaModal').style.display = 'block';
}

function openAddDecisionModal() {
    document.getElementById('decisionDate').value = new Date().toISOString().split('T')[0];
    document.getElementById('addDecisionModal').style.display = 'block';
}

function openAddRiskModal() {
    document.getElementById('addRiskModal').style.display = 'block';
}

function openAddActionModal() {
    document.getElementById('addActionModal').style.display = 'block';
}

function openAddMinuteModal() {
    document.getElementById('addMinuteModal').style.display = 'block';
}

// Save Functions
async function saveAttendee() {
    const data = {
        session_id: currentSessionId,
        name: document.getElementById('attendeeName').value,
        email: document.getElementById('attendeeEmail').value,
        role: document.getElementById('attendeeRole').value,
        company: document.getElementById('attendeeCompany').value,
        department: document.getElementById('attendeeDepartment').value
    };
    
    if(!data.name) { alert('Name is required!'); return; }
    
    try {
        const response = await fetch('/api/attendees', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if(response.ok) {
            closeModal('addAttendeeModal');
            loadAttendeesForSession(currentSessionId);
            showToast('Attendee added!');
            // Clear form
            document.getElementById('attendeeName').value = '';
            document.getElementById('attendeeEmail').value = '';
            document.getElementById('attendeeDepartment').value = '';
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

async function saveAgendaItem() {
    const data = {
        session_id: currentSessionId,
        topic: document.getElementById('agendaTopic').value,
        description: document.getElementById('agendaDescription').value,
        duration_minutes: document.getElementById('agendaDuration').value,
        presenter: document.getElementById('agendaPresenter').value
    };
    
    if(!data.topic) { alert('Topic is required!'); return; }
    
    try {
        const response = await fetch('/api/agenda', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if(response.ok) {
            closeModal('addAgendaModal');
            loadAgendaForSession(currentSessionId);
            showToast('Agenda item added!');
            document.getElementById('agendaTopic').value = '';
            document.getElementById('agendaDescription').value = '';
            document.getElementById('agendaPresenter').value = '';
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

async function saveDecision() {
    const data = {
        session_id: currentSessionId,
        project_id: globalProjectId,
        topic: document.getElementById("decisionTopic").value,
        options_considered: document.getElementById("decisionOptions").value,
        decision_made: document.getElementById("decisionMade").value,
        rationale: document.getElementById("decisionRationale").value,
        decision_maker: document.getElementById("decisionMaker").value,
        decision_date: document.getElementById("decisionDate").value,
        impact_areas: document.getElementById("decisionImpact").value
    };
    
    if(!data.topic || !data.decision_made) { alert("Topic and Decision are required!"); return; }
    
    try {
        const response = await fetch("/api/decisions", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if(response.ok) {
            closeModal("addDecisionModal");
            loadDecisionsForSession(currentSessionId);
            showToast("Decision created: " + (result.decision_id || "Success"));
            document.getElementById("decisionTopic").value = "";
            document.getElementById("decisionOptions").value = "";
            document.getElementById("decisionMade").value = "";
            document.getElementById("decisionRationale").value = "";
            document.getElementById("decisionMaker").value = "";
            document.getElementById("decisionImpact").value = "";
        }
    } catch(error) {
        console.error("Error:", error);
    }
}

async function saveRisk() {
    const data = {
        session_id: currentSessionId,
        project_id: globalProjectId,
        type: document.getElementById("riskType").value,
        title: document.getElementById("riskTitle").value,
        description: document.getElementById("riskDescription").value,
        category: document.getElementById("riskCategory").value,
        impact: document.getElementById("riskImpact").value,
        probability: document.getElementById("riskProbability").value,
        mitigation_plan: document.getElementById("riskMitigation").value,
        owner: document.getElementById("riskOwner").value,
        target_resolution_date: document.getElementById("riskTargetDate").value
    };
    
    if(!data.title) { alert("Title is required!"); return; }
    
    try {
        const response = await fetch("/api/risks", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if(response.ok) {
            closeModal("addRiskModal");
            loadRisksForSession(currentSessionId);
            showToast("Risk/Issue created: " + (result.item_id || "Success"));
            document.getElementById("riskTitle").value = "";
            document.getElementById("riskDescription").value = "";
            document.getElementById("riskMitigation").value = "";
            document.getElementById("riskOwner").value = "";
        }
    } catch(error) {
        console.error("Error:", error);
    }
}

async function saveAction() {
    const data = {
        session_id: currentSessionId,
        title: document.getElementById("actionTitle").value,
        description: document.getElementById("actionDescription").value,
        assigned_to: document.getElementById("actionAssignedTo").value,
        assigned_email: document.getElementById("actionAssignedEmail").value,
        due_date: document.getElementById("actionDueDate").value,
        priority: document.getElementById("actionPriority").value
    };
    
    if(!data.title) { alert("Title is required!"); return; }
    
    try {
        const response = await fetch("/api/actions", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if(response.ok) {
            closeModal("addActionModal");
            loadActionsForSession(currentSessionId);
            showToast("Action created: " + (result.action_id || "Success"));
            document.getElementById("actionTitle").value = "";
            document.getElementById("actionDescription").value = "";
            document.getElementById("actionAssignedTo").value = "";
            document.getElementById("actionAssignedEmail").value = "";
        }
    } catch(error) {
        console.error("Error:", error);
    }
}

async function saveMinute() {
    const data = {
        session_id: currentSessionId,
        topic: document.getElementById('minuteTopic').value,
        discussion: document.getElementById('minuteDiscussion').value,
        key_points: document.getElementById('minuteKeyPoints').value,
        recorded_by: document.getElementById('minuteRecordedBy').value
    };
    
    if(!data.discussion) { alert('Discussion is required!'); return; }
    
    try {
        const response = await fetch('/api/minutes', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if(response.ok) {
            closeModal('addMinuteModal');
            loadMinutesForSession(currentSessionId);
            showToast('Meeting note added!');
            // Clear form
            document.getElementById('minuteTopic').value = '';
            document.getElementById('minuteDiscussion').value = '';
            document.getElementById('minuteKeyPoints').value = '';
        }
    } catch(error) {
        console.error('Error:', error);
    }
}
// ============== PROJECTS ==============
async function loadProjects() {
    try {
        const response = await fetch('/api/projects');
        const projects = await response.json();
        
        const tbody = document.getElementById('projects-table-body');
        if(!tbody) return;
        
        if(projects.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">No projects found.</td></tr>';
            return;
        }
        
        tbody.innerHTML = projects.map(p => `
            <tr>
                <td><strong>${p.project_code}</strong></td>
                <td>${p.project_name}</td>
                <td>${p.customer_name || '-'}</td>
                <td><span class="pill ${p.status === 'Active' ? 'green' : 'blue'}">${p.status}</span></td>
                <td>${p.modules || '-'}</td>
                <td><button class="btn btn-small" onclick="selectProject(${p.id})">Select</button></td>
            </tr>
        `).join('');
    } catch(error) {
        console.error('Error:', error);
    }
}

function selectProject(id) {
    document.getElementById('globalProjectSelect').value = id;
    onGlobalProjectChange();
}

function openNewProjectModal() {
    document.getElementById('newProjectModal').style.display = 'block';
}

function closeNewProjectModal() {
    document.getElementById('newProjectModal').style.display = 'none';
}

async function saveNewProject() {
    const data = {
        project_code: document.getElementById('projectCode').value,
        project_name: document.getElementById('projectName').value,
        customer_name: document.getElementById('customerName').value,
        modules: document.getElementById('projectModules').value,
        status: 'Planning'
    };
    
    if(!data.project_code || !data.project_name) {
        alert('Project Code and Name required!');
        return;
    }
    
    try {
        const response = await fetch('/api/projects', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if(response.ok) {
            closeNewProjectModal();
            loadProjects();
            loadGlobalProjectDropdown();
            showToast('Project created!');
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

// ============== ANALYSIS ==============
async function loadSessionsForGlobalProject() {
    const tbody = document.getElementById("sessions-table-body");
    if(!tbody) return;
    
    if(!globalProjectId) {
        tbody.innerHTML = "<tr><td colspan=\"8\" style=\"text-align:center;color:#999;\">Please select a project from the header first.</td></tr>";
        return;
    }
    
    try {
        const response = await fetch("/api/sessions?project_id=" + globalProjectId);
        const sessions = await response.json();
        
        if(sessions.length === 0) {
            tbody.innerHTML = "<tr><td colspan=\"8\" style=\"text-align:center;color:#999;\">No sessions yet. Start a new session!</td></tr>";
            return;
        }
        
        tbody.innerHTML = sessions.map(s => {
            return "<tr>" +
                "<td><strong>" + s.session_name + "</strong></td>" +
                "<td><span class=\"pill purple\">" + (s.scenario_name || "-") + "</span></td>" +
                "<td><span class=\"pill blue\">" + (s.module || "-") + "</span></td>" +
                "<td>" + (s.process_name || "-") + "</td>" +
                "<td>" + (s.session_date || "-") + "</td>" +
                "<td><span class=\"pill " + (s.status === "Completed" ? "green" : "orange") + "\">" + s.status + "</span></td>" +
                "<td>-</td>" +
                "<td><button class=\"btn btn-small\" onclick=\"openSession(" + s.id + ")\">Open</button></td>" +
            "</tr>";
        }).join("");
    } catch(error) {
        console.error("Error:", error);
    }
}

async function openNewSessionModal() {
    if(!globalProjectId) {
        alert("Please select a project from the header first!");
        return;
    }
    
    // Scenario dropdown doldur
    try {
        const response = await fetch("/api/scenarios?project_id=" + globalProjectId);
        const scenarios = await response.json();
        const select = document.getElementById("sessionScenario");
        select.innerHTML = "<option value=\"\">-- Select Scenario --</option>" + 
            scenarios.map(s => "<option value=\"" + s.id + "\">" + (s.scenario_id || "S-"+s.id) + " - " + s.name + "</option>").join("");
    } catch(e) { console.error(e); }
    
    document.getElementById("newSessionModal").style.display = "block";
}

function closeNewSessionModal() {
    document.getElementById('newSessionModal').style.display = 'none';
}

async function saveNewSession() {
    const data = {
        project_id: globalProjectId,
        scenario_id: document.getElementById('sessionScenario').value,
        session_name: document.getElementById('sessionName').value,
        module: document.getElementById('sessionModule').value,
        process_name: document.getElementById('sessionProcessArea').value,
        status: 'Planned'
    };
    
    if(!data.session_name || !data.module || !data.scenario_id) {
        alert('Session Name, Scenario and Module required!');
        return;
    }
    
    try {
        const response = await fetch('/api/sessions', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if(response.ok) {
            closeNewSessionModal();
            loadSessionsForGlobalProject();
            showToast('Session created!');
        }
    } catch(error) {
        console.error('Error:', error);
    }
}

function openSession(sessionId) {
    currentSessionId = sessionId;
    loadSessionDetail(sessionId);
    document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
    document.getElementById('view-session-detail').classList.add('active');
}

function backToAnalysis() {
    currentSessionId = null;
    navTo('analysis');
}

async function loadSessionDetail(sessionId) {
    try {
        const response = await fetch(`/api/sessions/${sessionId}`);
        const session = await response.json();
        
        document.getElementById('sessionDetailTitle').textContent = session.session_name;
        document.getElementById('sessionDetailSubtitle').textContent = `${session.module || 'Module'} | ${session.process_name || 'Process'}`;
        document.getElementById('sessionDetailStatus').textContent = session.status;
        document.getElementById('detailScenario').textContent = session.scenario_name || 'Not Assigned';
        
        loadQuestionsForSession(sessionId);
        loadGapsForSession(sessionId);
    } catch(error) {
        console.error('Error:', error);
    }
}

async function loadQuestionsForSession(sessionId) {
    const filterStatus = document.getElementById("questionFilterStatus")?.value || "";
    try {
        const response = await fetch("/api/questions?session_id=" + sessionId);
        let questions = await response.json();
        
        if(filterStatus) {
            questions = questions.filter(q => q.status === filterStatus);
        }
        
        const container = document.getElementById("questionsContainer");
        if(questions.length === 0) {
            container.innerHTML = "<div style=\"text-align:center;color:#999;padding:40px;\">No questions found.</div>";
            document.getElementById("overviewQuestions").textContent = "0";
            return;
        }
        
        document.getElementById("overviewQuestions").textContent = questions.length;
        
        container.innerHTML = questions.map((q, i) => {
            const statusColor = q.status === "Answered" ? "green" : q.status === "Pending" ? "orange" : "blue";
            const qId = q.question_id || "Q-" + String(q.id).padStart(3, "0");
            return "<div class=\"smart-card\" style=\"margin-bottom:10px;padding:15px;background:#f8f9fa;cursor:pointer;\" onclick=\"viewQuestionDetail(" + q.id + ")\">" +
                "<div style=\"display:flex;justify-content:space-between;align-items:center;\">" +
                "<strong style=\"color:var(--primary);\">" + qId + "</strong>" +
                "<span class=\"pill " + statusColor + "\">" + (q.status || "Open") + "</span>" +
                "</div>" +
                "<p style=\"margin:10px 0;\">" + (q.question_text || "") + "</p>" +
                "<div style=\"padding:10px;background:white;border-radius:8px;border-left:3px solid " + (q.answer_text ? "var(--success)" : "#ccc") + ";\">" +
                (q.answer_text || "<em style=\"color:#999;\">Not answered yet</em>") +
                "</div>" +
                (q.assigned_to ? "<div style=\"margin-top:8px;font-size:12px;color:#666;\">üë§ " + q.assigned_to + (q.due_date ? " | üìÖ " + q.due_date : "") + "</div>" : "") +
                "</div>";
        }).join("");
    } catch(error) {
        console.error("Error:", error);
    }
}

async function loadGapsForSession(sessionId) {
    const filterType = document.getElementById("gapFilterType")?.value || "";
    try {
        const response = await fetch("/api/fitgap?session_id=" + sessionId);
        let gaps = await response.json();
        if(filterType) gaps = gaps.filter(g => g.status === filterType);
        const tbody = document.getElementById("fitgap-table-body");
        if(gaps.length === 0) {
            tbody.innerHTML = "<tr><td colspan=\"8\" style=\"text-align:center;color:#999;\">No items yet.</td></tr>";
            document.getElementById("overviewGaps").textContent = "0";
            return;
        }
        document.getElementById("overviewGaps").textContent = gaps.filter(g => g.status !== "Fit").length;
        tbody.innerHTML = gaps.map(g => {
            const gapId = g.gap_id || "GAP-" + String(g.id).padStart(3, "0");
            const statusColor = g.status === "Fit" ? "green" : g.status === "Partial Fit" ? "orange" : "red";
            const prioColor = g.priority === "High" ? "red" : g.priority === "Medium" ? "orange" : "green";
            return "<tr style=\"cursor:pointer;\" onclick=\"viewGapDetail(" + g.id + ")\">" +
                "<td><strong>" + gapId + "</strong></td>" +
                "<td><span class=\"pill blue\">" + (g.module || "-") + "</span></td>" +
                "<td>" + (g.requirement_description || g.gap_description || "-") + "</td>" +
                "<td><span class=\"pill " + statusColor + "\">" + (g.status || "Gap") + "</span></td>" +
                "<td>" + (g.sap_standard_solution || g.solution_type || "-") + "</td>" +
                "<td><span class=\"pill " + prioColor + "\">" + (g.priority || "Medium") + "</span></td>" +
                "<td>" + (g.resolution || g.decision_rationale || "-") + "</td>" +
                "<td><button class=\"btn btn-small\" onclick=\"event.stopPropagation();viewGapDetail(" + g.id + ")\">View</button></td>" +
                "</tr>";
        }).join("");
    } catch(error) {
        console.error("Error:", error);
    }
}

function openAddQuestionModal() { document.getElementById('addQuestionModal').style.display = 'block'; }
function closeAddQuestionModal() { document.getElementById('addQuestionModal').style.display = 'none'; }
function openAddGapModal() { document.getElementById('addGapModal').style.display = 'block'; }
function closeAddGapModal() { document.getElementById('addGapModal').style.display = 'none'; }


// Load requirements for session (Analysis tab)
async function loadRequirementsForSession(sessionId) {
    if (!sessionId) return;
    try {
        const classFilter = document.getElementById('sessionReqClassFilter')?.value || '';
        const priorityFilter = document.getElementById('sessionReqPriorityFilter')?.value || '';
        
        // Load requirements for this specific session/workshop
        let url = '/api/new-requirements?session_id=' + sessionId;
        const res = await fetch(url);
        let data = await res.json();
        
        // Client-side filtering
        if (classFilter) data = data.filter(r => r.classification === classFilter);
        if (priorityFilter) data = data.filter(r => r.priority === priorityFilter);
        
        const tbody = document.getElementById('session-requirements-body');
        if (!data.length) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">No requirements yet. Click "+ Add Requirement" to create one.</td></tr>';
            return;
        }
        
        tbody.innerHTML = data.map(r => {
            const classBadge = r.classification === 'Fit' 
                ? '<span style="background:#10b981;color:white;padding:2px 8px;border-radius:12px;font-size:12px;">Fit</span>'
                : r.classification === 'PartialFit'
                ? '<span style="background:#f59e0b;color:white;padding:2px 8px;border-radius:12px;font-size:12px;">Partial Fit</span>'
                : '<span style="background:#ef4444;color:white;padding:2px 8px;border-radius:12px;font-size:12px;">Gap</span>';
            
            const priorityBadge = r.priority === 'Must'
                ? '<span style="color:#ef4444;font-weight:600;">Must</span>'
                : r.priority === 'Should'
                ? '<span style="color:#f59e0b;font-weight:600;">Should</span>'
                : '<span style="color:#22c55e;font-weight:600;">Could</span>';
            
            const convBadge = r.conversion_status === 'None' 
                ? '<span style="color:#94a3b8;">-</span>'
                : r.conversion_status === 'WRICEF'
                ? '<span style="background:#3b82f6;color:white;padding:2px 8px;border-radius:12px;font-size:11px;">WRICEF</span>'
                : '<span style="background:#8b5cf6;color:white;padding:2px 8px;border-radius:12px;font-size:11px;">CONFIG</span>';
            
            return '<tr>' +
                '<td><strong>' + (r.code || '-') + '</strong></td>' +
                '<td>' + (r.title || '-') + '</td>' +
                '<td>' + classBadge + '</td>' +
                '<td>' + priorityBadge + '</td>' +
                '<td>' + convBadge + '</td>' +
                '<td><button class="btn btn-sm" onclick="viewRequirementDetail(' + r.id + ')">View</button></td>' +
                '</tr>';
        }).join('');
    } catch(e) {
        console.error('loadRequirementsForSession error:', e);
    }
}

// Open add requirement modal for session
function openAddReqForSessionModal() {
    if (!currentSessionId) {
        alert('Please select a workshop first');
        return;
    }
    // Store session ID for the modal
    window.currentReqSessionId = currentSessionId;
    
    // Open modal and set session context
    document.getElementById('addReqModal').style.display = 'flex';
    document.getElementById('newReqTitle').value = '';
    document.getElementById('newReqDescription').value = '';
    document.getElementById('newReqClassification').value = 'Gap';
    document.getElementById('newReqPriority').value = 'Must';
    
    // Show session context
    const sessionLabel = document.getElementById('newReqSessionLabel');
    if (sessionLabel) sessionLabel.textContent = 'Adding to Workshop #' + currentSessionId;
}

// View requirement detail
function viewRequirementDetail(id) {
    // Navigate to requirements management and highlight
    navTo('req-management');
    // Could add highlighting logic here
}

async function saveNewQuestion() {
    const data = {
        session_id: currentSessionId,
        question_text: document.getElementById('newQuestionText').value,
        answer_text: document.getElementById('newAnswerText').value
    };
    
    if(!data.question_text) { alert('Question required!'); return; }
    
    try {
        const response = await fetch('/api/questions', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if(response.ok) {
            closeAddQuestionModal();
            loadQuestionsForSession(currentSessionId);
            document.getElementById('newQuestionText').value = '';
            document.getElementById('newAnswerText').value = '';
            showToast('Question created: ' + (result.question_id || 'Success'));
        }
    } catch(error) { console.error('Error:', error); }
}

async function saveNewGap() {
    const data = {
        session_id: currentSessionId,
        description: document.getElementById("newGapDescription").value,
        requirement_description: document.getElementById("newGapDescription").value,
        priority: document.getElementById("newGapPriority").value,
        resolution_type: document.getElementById("newGapResolution").value,
        status: "Gap"
    };
    
    if(!data.description) { alert("Description required!"); return; }
    
    try {
        const response = await fetch("/api/fitgap", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if(response.ok) {
            closeAddGapModal();
            loadGapsForSession(currentSessionId);
            showToast("Gap created: " + (result.gap_id || "Success"));
        }
    } catch(error) { console.error("Error:", error); }
}
// ============== ANALYSIS WORKSPACE (YENƒ∞) ==============

async function loadAnalysisStats() {
    if(!globalProjectId) return;
    
    try {
        const response = await fetch("/api/analysis/stats?project_id=" + globalProjectId);
        const stats = await response.json();
        
        document.getElementById('stat-sessions').textContent = stats.total_sessions || 0;
        document.getElementById('stat-fits').textContent = stats.fit_count || 0;
        document.getElementById('stat-gaps').textContent = stats.gap_count || 0;
        document.getElementById('stat-open-questions').textContent = stats.open_questions || 0;
        document.getElementById('stat-open-actions').textContent = stats.open_actions || 0;
        document.getElementById('stat-high-risks').textContent = stats.high_risks || 0;
    } catch(error) {
        console.error('Error loading analysis stats:', error);
    }
}

function switchSessionTab(tabId, tabEl) {
    // Tab butonlarƒ±nƒ± g√ºncelle
    document.querySelectorAll('#view-session-detail .tab-item').forEach(t => t.classList.remove('active'));
    tabEl.classList.add('active');
    
    // Tab i√ßeriklerini gizle/g√∂ster
    document.querySelectorAll('.session-tab-content').forEach(c => c.style.display = 'none');
    document.getElementById(tabId).style.display = 'block';
    
    // Tab'a g√∂re veri y√ºkle
    if(tabId === 'tab-attendees') loadAttendeesForSession(currentSessionId);
    if(tabId === 'tab-agenda') loadAgendaForSession(currentSessionId);
    if(tabId === 'tab-questions') loadQuestionsForSession(currentSessionId);
    if(tabId === 'tab-requirements') loadRequirementsForSession(currentSessionId);
    if(tabId === 'tab-decisions') loadDecisionsForSession(currentSessionId);
    if(tabId === 'tab-risks') loadRisksForSession(currentSessionId);
    if(tabId === 'tab-actions') loadActionsForSession(currentSessionId);
    if(tabId === 'tab-minutes') loadMinutesForSession(currentSessionId);
}

// Attendees
async function loadAttendeesForSession(sessionId) {
    try {
        const response = await fetch(`/api/attendees?session_id=${sessionId}`);
        const attendees = await response.json();
        
        const tbody = document.getElementById('attendees-table-body');
        if(attendees.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:#999;">No attendees added yet.</td></tr>';
            return;
        }
        
        tbody.innerHTML = attendees.map(a => `
            <tr>
                <td><strong>${a.name}</strong><br><small style="color:#999;">${a.email || ''}</small></td>
                <td>${a.role || '-'}</td>
                <td>${a.department || '-'}</td>
                <td>${a.company || '-'}</td>
                <td>
                    <select class="form-control" style="width:100px;padding:4px;font-size:12px;" onchange="updateAttendeeStatus(${a.id}, this.value)">
                        <option value="Invited" ${a.attendance_status === 'Invited' ? 'selected' : ''}>Invited</option>
                        <option value="Confirmed" ${a.attendance_status === 'Confirmed' ? 'selected' : ''}>Confirmed</option>
                        <option value="Attended" ${a.attendance_status === 'Attended' ? 'selected' : ''}>Attended</option>
                        <option value="No-Show" ${a.attendance_status === 'No-Show' ? 'selected' : ''}>No-Show</option>
                    </select>
                </td>
                <td><button class="btn btn-small" onclick="deleteAttendee(${a.id})">üóëÔ∏è</button></td>
            </tr>
        `).join('');
        
        document.getElementById('overviewAttendees').textContent = attendees.length;
    } catch(error) {
        console.error('Error:', error);
    }
}

async function updateAttendeeStatus(id, status) {
    try {
        await fetch(`/api/attendees/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ attendance_status: status })
        });
        showToast('Attendee status updated');
    } catch(error) {
        console.error('Error:', error);
    }
}

async function deleteAttendee(id) {
    if(!confirm('Delete this attendee?')) return;
    try {
        await fetch(`/api/attendees/${id}`, { method: 'DELETE' });
        loadAttendeesForSession(currentSessionId);
        showToast('Attendee deleted');
    } catch(error) {
        console.error('Error:', error);
    }
}

// Agenda
async function loadAgendaForSession(sessionId) {
    try {
        const response = await fetch(`/api/agenda?session_id=${sessionId}`);
        const items = await response.json();
        
        const container = document.getElementById('agenda-container');
        if(items.length === 0) {
            container.innerHTML = '<div style="text-align:center;color:#999;padding:40px;">No agenda items yet.</div>';
            return;
        }
        
        container.innerHTML = items.map((item, idx) => `
            <div class="agenda-item">
                <div class="agenda-order">${idx + 1}</div>
                <div class="agenda-content">
                    <div class="agenda-topic">${item.topic}</div>
                    <div class="agenda-meta">
                        ‚è±Ô∏è ${item.duration_minutes} min | üë§ ${item.presenter || 'TBD'} | 
                        <span class="pill ${item.status === 'Completed' ? 'green' : 'blue'}" style="font-size:10px;">${item.status}</span>
                    </div>
                    ${item.description ? `<p style="margin-top:8px;font-size:13px;color:#666;">${item.description}</p>` : ''}
                </div>
                <button class="btn btn-small" onclick="deleteAgendaItem(${item.id})">üóëÔ∏è</button>
            </div>
        `).join('');
    } catch(error) {
        console.error('Error:', error);
    }
}

async function deleteAgendaItem(id) {
    if(!confirm('Delete this agenda item?')) return;
    try {
        await fetch(`/api/agenda/${id}`, { method: 'DELETE' });
        loadAgendaForSession(currentSessionId);
        showToast('Agenda item deleted');
    } catch(error) {
        console.error('Error:', error);
    }
}

// Decisions
async function loadDecisionsForSession(sessionId) {
    try {
        const response = await fetch(`/api/decisions?session_id=${sessionId}`);
        const decisions = await response.json();
        
        const tbody = document.getElementById('decisions-table-body');
        if(decisions.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#999;">No decisions recorded yet.</td></tr>';
            return;
        }
        
        tbody.innerHTML = decisions.map(d => `
            <tr>
                <td><strong>${d.decision_id || 'DEC-' + d.id}</strong></td>
                <td>${d.topic}</td>
                <td style="max-width:200px;">${d.decision_made}</td>
                <td>${d.decision_maker || '-'}</td>
                <td>${d.decision_date || '-'}</td>
                <td><span class="pill ${d.status === 'Approved' ? 'green' : 'orange'}">${d.status}</span></td>
                <td><button class="btn btn-small" onclick="viewDecisionDetails(${d.id})">View</button></td>
            </tr>
        `).join('');
    } catch(error) {
        console.error('Error:', error);
    }
}

// Risks
async function loadRisksForSession(sessionId) {
    const filterType = document.getElementById('riskFilterType')?.value || '';
    try {
        let url = `/api/risks?session_id=${sessionId}`;
        if(filterType) url += `&type=${filterType}`;
        
        const response = await fetch(url);
        const risks = await response.json();
        
        const tbody = document.getElementById('risks-table-body');
        if(risks.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#999;">No risks or issues recorded.</td></tr>';
            return;
        }
        
        tbody.innerHTML = risks.map(r => `
            <tr>
                <td><strong>${r.item_id || (r.type === 'Risk' ? 'RSK' : 'ISS') + '-' + r.id}</strong></td>
                <td><span class="pill ${r.type === 'Risk' ? 'orange' : 'purple'}">${r.type}</span></td>
                <td>${r.title}</td>
                <td><span class="pill ${r.impact === 'High' ? 'red' : r.impact === 'Medium' ? 'orange' : 'green'}">${r.impact}</span></td>
                <td>${r.type === 'Risk' ? `<span class="pill ${r.probability === 'High' ? 'red' : r.probability === 'Medium' ? 'orange' : 'green'}">${r.probability}</span>` : '-'}</td>
                <td>${r.owner || '-'}</td>
                <td><span class="pill ${r.status === 'Open' ? 'red' : r.status === 'Resolved' ? 'green' : 'blue'}">${r.status}</span></td>
                <td><button class="btn btn-small" onclick="viewRiskDetails(${r.id})">View</button></td>
            </tr>
        `).join('');
    } catch(error) {
        console.error('Error:', error);
    }
}

// Actions
async function loadActionsForSession(sessionId) {
    const filterStatus = document.getElementById('actionFilterStatus')?.value || '';
    try {
        const response = await fetch(`/api/actions?session_id=${sessionId}`);
        let actions = await response.json();
        
        if(filterStatus) {
            actions = actions.filter(a => a.status === filterStatus);
        }
        
        const tbody = document.getElementById('actions-table-body');
        if(actions.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#999;">No action items yet.</td></tr>';
            return;
        }
        
        tbody.innerHTML = actions.map(a => `
            <tr>
                <td><strong>${a.action_id || 'ACT-' + a.id}</strong></td>
                <td>${a.title}</td>
                <td>${a.assigned_to || '-'}</td>
                <td>${a.due_date || '-'}</td>
                <td><span class="pill ${a.priority === 'High' ? 'red' : a.priority === 'Medium' ? 'orange' : 'green'}">${a.priority}</span></td>
                <td>
                    <select class="form-control" style="width:110px;padding:4px;font-size:12px;" onchange="updateActionStatus(${a.id}, this.value)">
                        <option value="Open" ${a.status === 'Open' ? 'selected' : ''}>Open</option>
                        <option value="In Progress" ${a.status === 'In Progress' ? 'selected' : ''}>In Progress</option>
                        <option value="Completed" ${a.status === 'Completed' ? 'selected' : ''}>Completed</option>
                        <option value="Cancelled" ${a.status === 'Cancelled' ? 'selected' : ''}>Cancelled</option>
                    </select>
                </td>
                <td><button class="btn btn-small" onclick="deleteAction(${a.id})">üóëÔ∏è</button></td>
            </tr>
        `).join('');
        
        document.getElementById('overviewActions').textContent = actions.filter(a => a.status === 'Open').length;
    } catch(error) {
        console.error('Error:', error);
    }
}

async function updateActionStatus(id, status) {
    try {
        await fetch(`/api/actions/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: status, completion_date: status === 'Completed' ? new Date().toISOString().split('T')[0] : null })
        });
        showToast('Action status updated');
        loadActionsForSession(currentSessionId);
    } catch(error) {
        console.error('Error:', error);
    }
}

async function deleteAction(id) {
    if(!confirm('Delete this action item?')) return;
    try {
        await fetch(`/api/actions/${id}`, { method: 'DELETE' });
        loadActionsForSession(currentSessionId);
        showToast('Action deleted');
    } catch(error) {
        console.error('Error:', error);
    }
}

// Minutes
async function loadMinutesForSession(sessionId) {
    try {
        const response = await fetch(`/api/minutes?session_id=${sessionId}`);
        const minutes = await response.json();
        
        const container = document.getElementById('minutes-container');
        if(minutes.length === 0) {
            container.innerHTML = '<div style="text-align:center;color:#999;padding:40px;">No meeting minutes recorded yet.</div>';
            return;
        }
        
        container.innerHTML = minutes.map(m => `
            <div class="minute-item">
                <div class="minute-topic">${m.topic || 'Discussion Point'}</div>
                <div class="minute-discussion">${m.discussion || ''}</div>
                ${m.key_points ? `<div class="minute-keypoints"><strong>Key Points:</strong><br>${m.key_points}</div>` : ''}
                <div style="margin-top:10px;font-size:11px;color:#999;">Recorded by: ${m.recorded_by || 'Unknown'}</div>
            </div>
        `).join('');
    } catch(error) {
        console.error('Error:', error);
    }
}

