// ========== Phase 7: Test Management Functions ==========
async function loadTestManagement() {
    try {
        var url = '/api/test-management?project_id=' + globalProjectId;
        if (currentTestTypeFilter) url += '&test_type=' + currentTestTypeFilter;
        var statusFilter = document.getElementById('testStatusFilter') ? document.getElementById('testStatusFilter').value : '';
        if (statusFilter) url += '&status=' + statusFilter;
        
        var res = await fetch(url);
        var data = await res.json();
        var tbody = document.getElementById('testMgmtBody');
        if (!tbody) return;
        
        if (!data.length) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#94a3b8;">No test cases found.</td></tr>';
            return;
        }
        
        var statusColors = {Draft:'#64748b',Ready:'#3b82f6','In Progress':'#d97706',Passed:'#059669',Failed:'#dc2626'};
        var typeColors = {Unit:'#3b82f6',SIT:'#8b5cf6',UAT:'#06b6d4',String:'#d97706',Sprint:'#059669',PerformanceLoad:'#ec4899',Regression:'#64748b'};
        
        tbody.innerHTML = data.map(function(t) {
            var statusBadge = '<span style="background:'+(statusColors[t.status]||'#64748b')+';color:white;padding:2px 8px;border-radius:4px;font-size:0.75em;">'+t.status+'</span>';
            var typeBadge = '<span style="background:'+(typeColors[t.test_type]||'#64748b')+';color:white;padding:2px 8px;border-radius:4px;font-size:0.75em;">'+(t.test_type||'')+'</span>';
            var source = t.source_type ? (t.source_type + (t.source_id ? ' #'+t.source_id : '')) : '-';
            var execDate = t.execution_date ? new Date(t.execution_date).toLocaleDateString() : '-';
            return '<tr onclick="openTestDetail('+t.id+')" style="cursor:pointer;">' +
                '<td>'+(t.code||'')+'</td><td>'+typeBadge+'</td><td>'+(t.title||'')+'</td>' +
                '<td>'+statusBadge+'</td><td style="font-size:0.8em;">'+source+'</td>' +
                '<td>'+(t.owner||'-')+'</td><td style="font-size:0.8em;">'+execDate+'</td>' +
                '<td><button class="btn btn-sm" onclick="event.stopPropagation();openTestDetail('+t.id+')">Detail</button></td></tr>';
        }).join('');
    } catch(e) { console.error("Error loading test management:", e); }
}

function filterTestType(type) {
    currentTestTypeFilter = type;
    document.querySelectorAll('[id^="test-tab-"]').forEach(function(b){ b.style.background=''; b.style.color=''; });
    var ab = document.getElementById('test-tab-' + (type || 'all'));
    if (ab) { ab.style.background = '#3b82f6'; ab.style.color = 'white'; }
    loadTestManagement();
}

// Load tests for specific test type page
async function loadTestsByType(testType) {
    const viewMap = {
        'Unit': 'test-unit',
        'SIT': 'test-sit', 
        'UAT': 'test-uat',
        'String': 'test-string',
        'Sprint': 'test-sprint',
        'PerformanceLoad': 'test-perf',
        'Regression': 'test-regression'
    };
    const viewId = viewMap[testType];
    if (!viewId) return;
    
    try {
        const statusFilter = document.getElementById(viewId + '-status-filter')?.value || '';
        const ownerFilter = document.getElementById(viewId + '-owner-filter')?.value || '';
        const sourceFilter = document.getElementById(viewId + '-source-filter')?.value || '';
        
        let url = '/api/test-management?project_id=' + globalProjectId + '&test_type=' + testType;
        if (statusFilter) url += '&status=' + statusFilter;
        
        const res = await fetch(url);
        const tests = await res.json();
        
        // Filter by source if needed
        let filtered = tests;
        if (sourceFilter) {
            filtered = tests.filter(t => t.source_type === sourceFilter);
        }
        if (ownerFilter) {
            filtered = filtered.filter(t => t.owner === ownerFilter);
        }
        
        // Update stats
        const total = filtered.length;
        const passed = filtered.filter(t => t.status === 'Passed').length;
        const failed = filtered.filter(t => t.status === 'Failed').length;
        const progress = filtered.filter(t => t.status === 'In Progress').length;
        const notStarted = filtered.filter(t => t.status === 'Draft' || t.status === 'Ready').length;
        
        const setVal = (id, val) => { const el = document.getElementById(id); if(el) el.textContent = val; };
        setVal(viewId + '-total', total);
        setVal(viewId + '-passed', passed);
        setVal(viewId + '-failed', failed);
        setVal(viewId + '-progress', progress);
        setVal(viewId + '-notstarted', notStarted);
        
        // Render table
        const tbody = document.getElementById(viewId + '-tbody');
        if (!tbody) return;
        
        if (!filtered.length) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#94a3b8;padding:40px;">No ' + testType + ' tests found. Click "+ Add" to create one.</td></tr>';
            return;
        }
        
        tbody.innerHTML = filtered.map(t => {
            const statusColors = {
                'Draft': '#94a3b8', 'Ready': '#3b82f6', 'In Progress': '#f59e0b',
                'Passed': '#22c55e', 'Failed': '#ef4444', 'Blocked': '#6b7280'
            };
            const statusColor = statusColors[t.status] || '#94a3b8';
            const sourceLabel = t.source_type ? t.source_type + (t.source_id ? ' #' + t.source_id : '') : 'Manual';
            const lastRun = t.executed_at ? new Date(t.executed_at).toLocaleDateString() : '-';
            const resultBadge = t.execution_status ? 
                '<span style="background:' + (t.execution_status === 'Passed' ? '#22c55e' : '#ef4444') + ';color:white;padding:2px 8px;border-radius:12px;font-size:11px;">' + t.execution_status + '</span>' : '-';
            
            return '<tr>' +
                '<td><strong>' + (t.code || '-') + '</strong></td>' +
                '<td>' + (t.title || '-') + '</td>' +
                '<td><span style="background:' + statusColor + ';color:white;padding:2px 10px;border-radius:12px;font-size:12px;">' + (t.status || 'Draft') + '</span></td>' +
                '<td style="font-size:12px;color:#64748b;">' + sourceLabel + '</td>' +
                '<td>' + (t.owner || '-') + '</td>' +
                '<td style="font-size:12px;">' + lastRun + '</td>' +
                '<td>' + resultBadge + '</td>' +
                '<td><button class="btn btn-sm" onclick="openTestDetail(' + t.id + ')">View</button> ' +
                '<button class="btn btn-sm" style="background:#22c55e;color:white;" onclick="runTest(' + t.id + ')">Run</button></td>' +
                '</tr>';
        }).join('');
        
    } catch(e) {
        console.error('loadTestsByType error:', e);
    }
}

// Run test (placeholder)
async function runTest(testId) {
    if (!confirm('Execute this test case?')) return;
    try {
        const res = await fetch('/api/test-management/' + testId, {
            method: 'PUT',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({
                status: 'In Progress',
                executed_at: new Date().toISOString(),
                executed_by: 'User'
            })
        });
        if (res.ok) {
            showToast('Test execution started');
            // Reload current view
            const activeView = document.querySelector('.view.active');
            if (activeView && activeView.id.startsWith('view-test-')) {
                const testType = activeView.id.replace('view-test-', '');
                const typeMap = {'unit':'Unit','sit':'SIT','uat':'UAT','string':'String','sprint':'Sprint','perf':'PerformanceLoad','regression':'Regression'};
                if (typeMap[testType]) loadTestsByType(typeMap[testType]);
            }
        }
    } catch(e) { console.error(e); alert('Error: ' + e.message); }
}

async function openTestDetail(id) {
    try {
        var res = await fetch('/api/test-management/' + id);
        var t = await res.json();
        currentTestDetailId = id;
        document.getElementById('testDetCode').value = t.code || '';
        document.getElementById('testDetType').value = t.test_type || '';
        document.getElementById('testDetTitle').value = t.title || '';
        document.getElementById('testDetStatus').value = t.status || 'Draft';
        document.getElementById('testDetOwner').value = t.owner || '';
        document.getElementById('testDetDesc').value = t.description || '';
        document.getElementById('testDetSteps').value = t.steps || '[]';
        document.getElementById('testDetEvidence').value = t.evidence || '';
        document.getElementById('testDetSource').innerHTML = t.source_type ? 'Source: ' + t.source_type + (t.source_id ? ' #'+t.source_id : '') : '';
        document.getElementById('testDetailModal').style.display = 'flex';
    } catch(e) { console.error(e); }
}

async function saveTestDetail() {
    try {
        var body = {
            title: document.getElementById('testDetTitle').value,
            description: document.getElementById('testDetDesc').value,
            status: document.getElementById('testDetStatus').value,
            owner: document.getElementById('testDetOwner').value,
            steps: document.getElementById('testDetSteps').value,
            evidence: document.getElementById('testDetEvidence').value
        };
        var res = await fetch('/api/test-management/' + currentTestDetailId, {method:'PUT',headers:{'Content-Type':'application/json'},body:JSON.stringify(body)});
        if (res.ok) { alert('Test case saved!'); closeModal('testDetailModal'); loadTestManagement(); }
        else { var d = await res.json(); alert(d.error||'Save failed'); }
    } catch(e) { alert('Error: '+e.message); }
}

function openAddTestModal() {
    document.getElementById('newTestCode').value = '';
    document.getElementById('newTestTitle').value = '';
    document.getElementById('newTestDesc').value = '';
    document.getElementById('newTestOwner').value = '';
    // Show scenario selector for SIT/UAT
    var typeEl = document.getElementById('newTestType');
    typeEl.onchange = function() {
        var show = ['SIT','UAT'].indexOf(typeEl.value) >= 0;
        document.getElementById('testScenarioSelector').style.display = show ? 'block' : 'none';
        if (show) loadScenariosForTestModal();
    };
    document.getElementById('testScenarioSelector').style.display = 'none';
    document.getElementById('addTestModal').style.display = 'flex';
}

async function loadScenariosForTestModal() {
    try {
        var res = await fetch('/api/scenarios?project_id=' + globalProjectId);
        var data = await res.json();
        var sel = document.getElementById('newTestScenario');
        sel.innerHTML = '<option value="">Select Scenario...</option>' + data.map(function(s){
            var label = s.name + (s.is_composite ? ' (Composite)' : '');
            return '<option value="'+s.id+'">'+label+'</option>';
        }).join('');
    } catch(e) {}
}

async function saveNewTest() {
    try {
        var typeVal = document.getElementById('newTestType').value;
        var body = {
            project_id: globalProjectId,
            code: document.getElementById('newTestCode').value,
            test_type: typeVal,
            title: document.getElementById('newTestTitle').value,
            description: document.getElementById('newTestDesc').value,
            owner: document.getElementById('newTestOwner').value
        };
        // Link scenario for SIT/UAT
        if (['SIT','UAT'].indexOf(typeVal) >= 0) {
            var scenId = document.getElementById('newTestScenario').value;
            if (scenId) {
                body.source_type = 'SCENARIO';
                body.source_id = parseInt(scenId);
            }
        }
        var res = await fetch('/api/test-management', {method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(body)});
        if (res.ok) { closeModal('addTestModal'); loadTestManagement(); }
        else { var d = await res.json(); alert(d.error||'Save failed'); }
    } catch(e) { alert('Error: '+e.message); }
}
</script>

