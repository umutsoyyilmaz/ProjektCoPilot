                    <option value="BASIS">BASIS - System Admin</option>
                    <option value="ABAP">ABAP - Development</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Related Decision</label>
                <select id="gapDetailDecision" class="form-control">
                    <option value="">-- No Decision Linked --</option>
                </select>
            </div>
            <div class="form-group">
