        options_considered: document.getElementById("decisionDetailOptions").value,
        decision_made: document.getElementById("decisionDetailMade").value,
        rationale: document.getElementById("decisionDetailRationale").value,
        impact_areas: document.getElementById("decisionDetailImpact").value,
                related_gap_id: document.getElementById("decisionDetailGap").value || null,
                related_wricef_id: document.getElementById("decisionDetailWricef").value || null
    };
