        <div style="display:flex;gap:10px;margin-top:20px;">
            <button class="btn btn-primary" onclick="saveRiskDetail()">Save Changes</button>
            <button class="btn btn-ai" onclick="createActionFromRisk()">+ Create Action</button>
            <button class="btn btn-secondary" onclick="closeModal('riskDetailModal')">Cancel</button>
        </div>
    </div>
</div>
