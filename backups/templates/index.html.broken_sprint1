                    <span class="pill green">{{ activity['status'] }}</span>
                {% else %}
                    <span class="pill blue">{{ activity['status'] }}</span>
                {% endif %}
            </td>
            <td>Recently Updated</td>
        </tr>
        {% endfor %}
    {% else %}
        <tr>
            <td colspan="4" style="text-align: center; color: #999;">No recent activities</td>
        </tr>
    {% endif %}
</tbody>
                    </table>
                </div>
            </div>

