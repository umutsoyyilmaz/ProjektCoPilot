function openAnalysisDashboard() {
    document.getElementById("analysisDashboardModal").style.display = "block";
    loadDashboardData();
}

let fitGapChartInstance = null;
let sessionStatusChartInstance = null;

async function loadDashboardData() {
    if(!globalProjectId) {
        showToast("Please select a project first");
        return;
    }
    
    try {
        const statsRes = await fetch("/api/analysis/stats?project_id=" + globalProjectId);
        const stats = await statsRes.json();
        
        document.getElementById("dash-total-sessions").textContent = stats.total_sessions || 0;
        document.getElementById("dash-completed").textContent = stats.completed_sessions || 0;
        document.getElementById("dash-in-progress").textContent = (stats.total_sessions - stats.completed_sessions) || 0;
        document.getElementById("dash-high-risks").textContent = stats.high_risks || 0;
        
        renderFitGapChart(stats.fit_count || 0, stats.gap_count || 0);
        renderSessionStatusChart(stats);
        renderRiskHeatmap();
        loadOpenItems();
    } catch(error) {
        console.error("Dashboard error:", error);
    }
}

function renderFitGapChart(fits, gaps) {
    const ctx = document.getElementById("fitGapChart").getContext("2d");
    if(fitGapChartInstance) fitGapChartInstance.destroy();
    fitGapChartInstance = new Chart(ctx, {
        type: "doughnut",
        data: {
            labels: ["Fit", "Gap"],
            datasets: [{
                data: [fits, gaps],
                backgroundColor: ["#4CAF50", "#f44336"],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: "bottom" } }
        }
    });
}

function renderSessionStatusChart(stats) {
    const ctx = document.getElementById("sessionStatusChart").getContext("2d");
    if(sessionStatusChartInstance) sessionStatusChartInstance.destroy();
    sessionStatusChartInstance = new Chart(ctx, {
        type: "bar",
        data: {
            labels: ["Sessions", "Questions", "Actions", "Risks"],
            datasets: [{
                label: "Count",
                data: [stats.total_sessions, stats.open_questions, stats.open_actions, stats.high_risks],
                backgroundColor: ["#2196F3", "#FF9800", "#9C27B0", "#f44336"]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } }
        }
    });
}
async function renderRiskHeatmap() {
    const container = document.getElementById("riskHeatmap");
    try {
        const res = await fetch("/api/risks?project_id=" + globalProjectId);
        const risks = await res.json();
        const highRisks = risks.filter(r => r.risk_score >= 6).length;
        const medRisks = risks.filter(r => r.risk_score >= 3 && r.risk_score < 6).length;
        const lowRisks = risks.filter(r => r.risk_score < 3).length;
        container.innerHTML = "<div style=\"padding:20px; background:#FFCDD2; border-radius:8px; text-align:center;\"><div style=\"font-size:24px; font-weight:700; color:#C62828;\">" + highRisks + "</div><div style=\"font-size:12px; color:#C62828;\">High Risk</div></div><div style=\"padding:20px; background:#FFE0B2; border-radius:8px; text-align:center;\"><div style=\"font-size:24px; font-weight:700; color:#E65100;\">" + medRisks + "</div><div style=\"font-size:12px; color:#E65100;\">Medium Risk</div></div><div style=\"padding:20px; background:#C8E6C9; border-radius:8px; text-align:center;\"><div style=\"font-size:24px; font-weight:700; color:#2E7D32;\">" + lowRisks + "</div><div style=\"font-size:12px; color:#2E7D32;\">Low Risk</div></div>";
    } catch(e) {
        container.innerHTML = "<div style=\"color:#999;\">No risk data</div>";
    }
}

async function loadOpenItems() {
    const questionsDiv = document.getElementById("dash-open-questions-list");
    const actionsDiv = document.getElementById("dash-pending-actions-list");
    
    try {
        const qRes = await fetch("/api/questions?project_id=" + globalProjectId);
        const questions = await qRes.json();
        const openQ = questions.slice(0, 5);
        
        if(openQ.length === 0) {
            questionsDiv.innerHTML = "<div style=\"color:#999; text-align:center;\">No open questions</div>";
        } else {
            questionsDiv.innerHTML = openQ.map(q => "<div style=\"padding:8px; border-bottom:1px solid #eee;\">‚ùì " + (q.question_text || "").substring(0, 50) + "...</div>").join("");
        }
    } catch(e) {
        questionsDiv.innerHTML = "<div style=\"color:#999;\">Error loading</div>";
    }
    
    try {
        const aRes = await fetch("/api/actions?project_id=" + globalProjectId);
        const actions = await aRes.json();
        const openA = actions.filter(a => a.status === "Open").slice(0, 5);
        
        if(openA.length === 0) {
            actionsDiv.innerHTML = "<div style=\"color:#999; text-align:center;\">No pending actions</div>";
        } else {
            actionsDiv.innerHTML = openA.map(a => "<div style=\"padding:8px; border-bottom:1px solid #eee;\">‚úÖ " + (a.title || "").substring(0, 50) + "</div>").join("");
        }
    } catch(e) {
        actionsDiv.innerHTML = "<div style=\"color:#999;\">Error loading</div>";
    }
}

