let currentDecisionId = null;
let currentRiskId = null;

async function viewDecisionDetails(id) {
    currentDecisionId = id;
    try {
        const response = await fetch("/api/decisions/" + id);
        const d = await response.json();
        document.getElementById("decisionDetailTitle").textContent = d.decision_id || "DEC-" + String(id).padStart(3, "0");
        document.getElementById("decisionDetailStatus").value = d.status || "Draft";
        document.getElementById("decisionDetailMaker").value = d.decision_maker || "";
        document.getElementById("decisionDetailTopic").value = d.topic || "";
        document.getElementById("decisionDetailOptions").value = d.options_considered || "";
        document.getElementById("decisionDetailMade").value = d.decision_made || "";
        document.getElementById("decisionDetailRationale").value = d.rationale || "";
        document.getElementById("decisionDetailImpact").value = d.impact_areas || "";
        // Load gaps for decision linking
            const gapsResp = await fetch("/api/fitgap?session_id=" + currentSessionId);
            const gaps = await gapsResp.json();
            const gapSelect = document.getElementById("decisionDetailGap");
            gapSelect.innerHTML = '<option value="">-- No Gap Linked --</option>';
            gaps.forEach(g => {
                gapSelect.innerHTML += '<option value="' + g.id + '"' + (g.id == d.related_gap_id ? ' selected' : '') + '>' + (g.item_id || 'GAP-' + g.id) + '</option>';
            });
            
            // Load WRICEFs for decision linking
            const wricefResp = await fetch("/api/wricef?project_id=" + globalProjectId);
            const wricefs = await wricefResp.json();
            const wricefSelect = document.getElementById("decisionDetailWricef");
            wricefSelect.innerHTML = '<option value="">-- No WRICEF Linked --</option>';
            wricefs.forEach(w => {
                wricefSelect.innerHTML += '<option value="' + w.id + '"' + (w.id == d.related_wricef_id ? ' selected' : '') + '>' + (w.wricef_id || w.name || 'WRICEF-' + w.id) + '</option>';
            });
            
            document.getElementById("decisionDetailModal").style.display = "block";
    } catch(error) {
        console.error("Error:", error);
        showToast("Error loading decision");
    }
}

