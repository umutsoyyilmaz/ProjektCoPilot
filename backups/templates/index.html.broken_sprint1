async function saveQuestionDetail() {
    const data = {
        status: document.getElementById("questionDetailStatus").value,
        question_text: document.getElementById("questionDetailText").value,
        answer_text: document.getElementById("questionDetailAnswer").value,
        assigned_to: document.getElementById("questionDetailAssigned").value,
        due_date: document.getElementById("questionDetailDue").value
    };
    try {
        await fetch("/api/questions/" + currentQuestionId, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });
        closeModal("questionDetailModal");
        loadQuestionsForSession(currentSessionId);
        showToast("Question updated!");
    } catch(error) {
        console.error("Error:", error);
    }
}

async function viewGapDetail(id) {
    currentGapId = id;
    try {
        const response = await fetch("/api/fitgap/" + id);
        const g = await response.json();
        document.getElementById("gapDetailTitle").textContent = g.gap_id || "GAP-" + String(id).padStart(3, "0");
        document.getElementById("gapDetailStatus").value = g.status || "Gap";
        document.getElementById("gapDetailPriority").value = g.priority || "Medium";
        document.getElementById("gapDetailModule").value = g.module || "";
        document.getElementById("gapDetailRequirement").value = g.requirement_description || g.gap_description || "";
        document.getElementById("gapDetailSolution").value = g.sap_standard_solution || g.solution_type || "";
        document.getElementById("gapDetailResolution").value = g.resolution || g.decision_rationale || "";
        
        // Load decisions dropdown
        const decisionsResp = await fetch("/api/decisions?session_id=" + currentSessionId);
        const decisions = await decisionsResp.json();
        const decSelect = document.getElementById("gapDetailDecision");
        decSelect.innerHTML = "<option value=\"\">-- No Decision Linked --</option>" + 
            decisions.map(d => "<option value=\"" + d.id + "\">" + (d.decision_id || "D-"+d.id) + " - " + (d.topic || "").substring(0,30) + "</option>").join("");
        decSelect.value = g.related_decision_id || "";
        
        // Load WRICEF dropdown
        const wricefResp = await fetch("/api/wricef?project_id=" + globalProjectId);
        const wricefs = await wricefResp.json();
        const wrSelect = document.getElementById("gapDetailWricef");
        wrSelect.innerHTML = "<option value=\"\">-- No WRICEF Linked --</option>" + 
            wricefs.map(w => "<option value=\"" + w.id + "\">" + (w.wricef_id || "WR-"+w.id) + " - " + (w.name || "").substring(0,30) + "</option>").join("");
        wrSelect.value = g.related_wricef_id || "";
        document.getElementById("gapDetailModal").style.display = "block";
    } catch(error) {
        console.error("Error:", error);
        showToast("Error loading gap");
    }
}

