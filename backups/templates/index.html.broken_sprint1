        document.getElementById("questionDetailAnswer").value = q.answer_text || "";
        document.getElementById("questionDetailAssigned").value = q.assigned_to || "";
        document.getElementById("questionDetailDue").value = q.due_date || "";
        document.getElementById("questionDetailModal").style.display = "block";
