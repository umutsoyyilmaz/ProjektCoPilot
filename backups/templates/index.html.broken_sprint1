<script>
// ========== Phase 3+4: Requirements Management ==========
var currentConvertReqId = null;
var currentConvertType = null; // 'config' or 'wricef'
var currentWricefDetailId = null;
var currentConfigDetailId = null;
var currentTestDetailId = null;
var currentTestTypeFilter = '';

async function loadNewRequirements() {
    try {
        var url = '/api/new-requirements?project_id=' + globalProjectId;
        var classFilter = document.getElementById('reqClassFilter') ? document.getElementById('reqClassFilter').value : '';
        var priorityFilter = document.getElementById('reqPriorityFilter') ? document.getElementById('reqPriorityFilter').value : '';
        var analysisFilter = document.getElementById('reqAnalysisFilter') ? document.getElementById('reqAnalysisFilter').value : '';
        if (classFilter) url += '&classification=' + classFilter;
        if (analysisFilter) url += '&analysis_id=' + analysisFilter;
        
        var res = await fetch(url);
        var data = await res.json();
        var tbody = document.getElementById('reqTableBody');
        if (!tbody) return;
        
        // Filter by priority client-side if needed
        var items = data;
        if (priorityFilter) items = items.filter(function(r){ return r.priority === priorityFilter; });
        
        if (!items.length) {
            tbody.innerHTML = '<tr><td colspan="7" style="text-align:center;color:#94a3b8;">No requirements found.</td></tr>';
            return;
        }
        
        var classColors = { Fit: '#059669', PartialFit: '#d97706', Gap: '#dc2626' };
        var classLabels = { Fit: 'Fit', PartialFit: 'Partial Fit', Gap: 'Gap' };
        var convColors = { None: '#64748b', WRICEF: '#3b82f6', CONFIG: '#8b5cf6' };
        
        tbody.innerHTML = items.map(function(r) {
            var classBadge = '<span style="background:' + (classColors[r.classification]||'#64748b') + ';color:white;padding:2px 8px;border-radius:4px;font-size:0.75em;">' + (classLabels[r.classification]||r.classification) + '</span>';
            var convBadge = r.conversion_status === 'None' ?
                getConvertButtons(r) :
                '<span style="background:' + (convColors[r.converted_item_type]||'#64748b') + ';color:white;padding:2px 8px;border-radius:4px;font-size:0.75em;">' + r.conversion_status + '</span>' +
                (r.converted_item_id ? ' <a href="#" onclick="openConvertedItem(\''+r.converted_item_type+'\','+r.converted_item_id+');return false;" style="font-size:0.75em;">Open</a>' : '');
            var priorityColors = { Must: '#dc2626', Should: '#d97706', Could: '#3b82f6' };
            var priBadge = '<span style="color:' + (priorityColors[r.priority]||'#64748b') + ';font-weight:500;">' + (r.priority||'') + '</span>';
            return '<tr>' +
                '<td>' + (r.code||'') + '</td>' +
                '<td>' + (r.title||'') + '</td>' +
                '<td>' + classBadge + '</td>' +
                '<td>' + priBadge + '</td>' +
                '<td>' + convBadge + '</td>' +
                '<td style="font-size:0.8em;color:#94a3b8;">' + (r.analysis_id||'-') + '</td>' +
                '<td><button class="btn btn-sm" onclick="editRequirement('+r.id+')">Edit</button></td>' +
            '</tr>';
        }).join('');
        
        // Also load analyses for filter dropdown
        loadAnalysisFilterOptions();
    } catch(e) { console.error("Error loading requirements:", e); }
}

function getConvertButtons(r) {
    if (r.classification === 'Fit') {
        return '<button class="btn btn-sm" style="background:#8b5cf6;color:white;font-size:0.7em;" onclick="openConvertModal('+r.id+',\'config\',\''+r.title+'\')">To Config</button>';
    } else if (r.classification === 'Gap' || r.classification === 'PartialFit') {
        return '<button class="btn btn-sm" style="background:#3b82f6;color:white;font-size:0.7em;" onclick="openConvertModal('+r.id+',\'wricef\',\''+r.title+'\')">To WRICEF</button>';
    }
    return '<span style="color:#64748b;font-size:0.75em;">-</span>';
}

async function loadAnalysisFilterOptions() {
    try {
        var res = await fetch('/api/analyses?project_id=' + globalProjectId);
        var data = await res.json();
        var sel = document.getElementById('reqAnalysisFilter');
        if (!sel) return;
        var current = sel.value;
        sel.innerHTML = '<option value="">All Analyses</option>' + data.map(function(a){ return '<option value="'+a.id+'">'+a.code+' - '+a.title+'</option>'; }).join('');
        sel.value = current;
    } catch(e) {}
}

function openConvertModal(reqId, type, title) {
    currentConvertReqId = reqId;
    currentConvertType = type;
    document.getElementById('convertReqName').value = title;
    document.getElementById('convertReqTitle').textContent = type === 'config' ? 'Convert to Configuration' : 'Convert to WRICEF';
    document.getElementById('convertTypeGroup').style.display = type === 'wricef' ? 'block' : 'none';
    document.getElementById('convertReqModal').style.display = 'flex';
}

async function executeConvert() {
    try {
        var body = {};
        if (currentConvertType === 'wricef') {
            body.wricef_type = document.getElementById('convertWricefType').value;
        }
        var res = await fetch('/api/new-requirements/' + currentConvertReqId + '/convert', {
            method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify(body)
        });
        var data = await res.json();
        if (res.ok) {
            alert(data.message + ' (' + (data.item_code||'') + ')');
            closeModal('convertReqModal');
            loadNewRequirements();
        } else { alert(data.error || 'Convert failed'); }
    } catch(e) { alert('Error: ' + e.message); }
}

function openConvertedItem(type, id) {
    if (type === 'WRICEF') openWricefDetail(id);
    else if (type === 'CONFIG') openConfigDetail(id);
}

async function editRequirement(id) {
    try {
        var res = await fetch('/api/new-requirements/' + id);
        var r = await res.json();
        // Populate the addReqModal for editing
        document.getElementById('addReqModal').style.display = 'flex';
        if (document.getElementById('newReqCode')) document.getElementById('newReqCode').value = r.code || '';
        if (document.getElementById('newReqTitle')) document.getElementById('newReqTitle').value = r.title || '';
        if (document.getElementById('newReqDesc')) document.getElementById('newReqDesc').value = r.description || '';
        if (document.getElementById('newReqClass')) document.getElementById('newReqClass').value = r.classification || 'Gap';
        if (document.getElementById('newReqPriority')) document.getElementById('newReqPriority').value = r.priority || 'Must';
        // Store edit ID
        document.getElementById('addReqModal').dataset.editId = id;
        // Lock classification if already converted
        var classEl = document.getElementById('newReqClass');
        if (classEl) classEl.disabled = (r.conversion_status !== 'None');
    } catch(e) { console.error(e); }
}


// Save new requirement (or update existing)
async function saveNewRequirement() {
    try {
        var modal = document.getElementById('addReqModal');
        var editId = modal.dataset.editId;
        
        var code = document.getElementById('newReqCode') ? document.getElementById('newReqCode').value : '';
        var title = document.getElementById('newReqTitle') ? document.getElementById('newReqTitle').value : '';
        var desc = document.getElementById('newReqDesc') ? document.getElementById('newReqDesc').value : '';
        var classification = document.getElementById('newReqClass') ? document.getElementById('newReqClass').value : 'Gap';
        var priority = document.getElementById('newReqPriority') ? document.getElementById('newReqPriority').value : 'Must';
        var analysisId = document.getElementById('newReqAnalysis') ? document.getElementById('newReqAnalysis').value : '';
        
        if (!title) { alert('Title is required'); return; }
        
        var body = {
            project_id: globalProjectId,
            title: title,
            description: desc,
            classification: classification,
            priority: priority,
            analysis_id: analysisId || null,
            session_id: window.currentReqSessionId || null
        };
        if (code) body.code = code;
        
        var url, method;
        if (editId) {
            url = '/api/new-requirements/' + editId;
            method = 'PUT';
        } else {
            url = '/api/new-requirements';
            method = 'POST';
        }
        
        var res = await fetch(url, {
            method: method,
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(body)
        });
        var data = await res.json();
        
        if (res.ok) {
            showToast(editId ? 'Requirement updated!' : 'Requirement created!');
            closeModal('addReqModal');
            modal.dataset.editId = '';
            window.currentReqSessionId = null;
            loadNewRequirements();
            if (currentSessionId) loadRequirementsForSession(currentSessionId);
        } else {
            alert(data.error || 'Failed to save');
        }
    } catch(e) {
        console.error('saveNewRequirement error:', e);
        alert('Error: ' + e.message);
    }
}

// Open add requirement modal
function openAddRequirementModal() {
    var modal = document.getElementById('addReqModal');
    modal.dataset.editId = '';
    window.currentReqSessionId = null;
    
    if (document.getElementById('newReqCode')) document.getElementById('newReqCode').value = '';
    if (document.getElementById('newReqTitle')) document.getElementById('newReqTitle').value = '';
    if (document.getElementById('newReqDesc')) document.getElementById('newReqDesc').value = '';
    if (document.getElementById('newReqClass')) { document.getElementById('newReqClass').value = 'Gap'; document.getElementById('newReqClass').disabled = false; }
    if (document.getElementById('newReqPriority')) document.getElementById('newReqPriority').value = 'Must';
    
    fetch('/api/analyses?project_id=' + globalProjectId)
        .then(function(r){ return r.json(); })
        .then(function(data) {
            var sel = document.getElementById('newReqAnalysis');
            if (sel) sel.innerHTML = '<option value="">Select Analysis...</option>' + data.map(function(a){ return '<option value="'+a.id+'">'+a.code+' - '+a.title+'</option>'; }).join('');
        });
    
    modal.style.display = 'flex';
}

// ========== Phase 5: WRICEF List Functions ==========
async function loadWricefList() {
    try {
        var url = '/api/wricef-items?project_id=' + globalProjectId;
        var typeFilter = document.getElementById('wricefTypeFilter') ? document.getElementById('wricefTypeFilter').value : '';
        var statusFilter = document.getElementById('wricefStatusFilter') ? document.getElementById('wricefStatusFilter').value : '';
        var res = await fetch(url);
        var data = await res.json();
        
        if (typeFilter) data = data.filter(function(w){ return w.wricef_type === typeFilter; });
        if (statusFilter) data = data.filter(function(w){ return w.status === statusFilter; });
        
        var tbody = document.getElementById('wricefListBody');
        if (!tbody) return;
        
        if (!data.length) {
            tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:#94a3b8;">No WRICEF items found.</td></tr>';
            return;
        }
        
        var typeColors = {Workflow:'#3b82f6',Report:'#8b5cf6',Interface:'#06b6d4',Conversion:'#d97706',Enhancement:'#059669',Form:'#ec4899'};
        tbody.innerHTML = data.map(function(w) {
            var typeBadge = '<span style="background:'+(typeColors[w.wricef_type]||'#64748b')+';color:white;padding:2px 8px;border-radius:4px;font-size:0.75em;">'+w.wricef_type+'</span>';
            return '<tr onclick="openWricefDetail('+w.id+')" style="cursor:pointer;">' +
                '<td>'+(w.code||'')+'</td><td>'+typeBadge+'</td><td>'+(w.title||'')+'</td>' +
                '<td>'+(w.status||'')+'</td><td>'+(w.owner||'-')+'</td><td>'+(w.module||'-')+'</td>' +
                '<td style="font-size:0.8em;color:#94a3b8;">'+(w.requirement_id||'-')+'</td>' +
                '<td><button class="btn btn-sm" onclick="event.stopPropagation();openWricefDetail('+w.id+')">Detail</button></td></tr>';
        }).join('');
    } catch(e) { console.error("Error loading WRICEF list:", e); }
}

async function openWricefDetail(id) {
    try {
        var res = await fetch('/api/wricef-items/' + id);
        var w = await res.json();
        currentWricefDetailId = id;
        document.getElementById('wricefDetCode').value = w.code || '';
        document.getElementById('wricefDetType').value = w.wricef_type || '';
        document.getElementById('wricefDetTitle').value = w.title || '';
        document.getElementById('wricefDetStatus').value = w.status || 'Identified';
        document.getElementById('wricefDetOwner').value = w.owner || '';
        document.getElementById('wricefDetModule').value = w.module || '';
        document.getElementById('wricefDetDesc').value = w.description || '';
        document.getElementById('wricefDetFS').value = w.fs_content || '';
        document.getElementById('wricefDetTS').value = w.ts_content || '';
        document.getElementById('wricefDetUnitSteps').value = w.unit_test_steps || '[]';
        document.getElementById('wricefDetSourceReq').innerHTML = w.requirement_id ? '<small style="color:#94a3b8;">Source Requirement ID: '+w.requirement_id+'</small>' : '';
        document.getElementById('wricefDetailModal').style.display = 'flex';
    } catch(e) { console.error(e); }
}

async function saveWricefDetail() {
    try {
        var body = {
            title: document.getElementById('wricefDetTitle').value,
            description: document.getElementById('wricefDetDesc').value,
            status: document.getElementById('wricefDetStatus').value,
            owner: document.getElementById('wricefDetOwner').value,
            module: document.getElementById('wricefDetModule').value,
            fs_content: document.getElementById('wricefDetFS').value,
            ts_content: document.getElementById('wricefDetTS').value,
            unit_test_steps: document.getElementById('wricefDetUnitSteps').value
        };
        var res = await fetch('/api/wricef-items/' + currentWricefDetailId, {method:'PUT',headers:{'Content-Type':'application/json'},body:JSON.stringify(body)});
        if (res.ok) { alert('WRICEF item saved!'); closeModal('wricefDetailModal'); loadWricefList(); }
        else { var d = await res.json(); alert(d.error||'Save failed'); }
    } catch(e) { alert('Error: '+e.message); }
}

async function convertWricefToTest() {
    try {
        var res = await fetch('/api/wricef-items/' + currentWricefDetailId + '/convert-to-test', {method:'POST',headers:{'Content-Type':'application/json'},body:'{}'});
        var data = await res.json();
        if (res.ok) { alert(data.message + ' (' + data.test_code + ')'); }
        else { alert(data.error||'Convert failed'); }
    } catch(e) { alert('Error: '+e.message); }
}

function openAddWricefItemModal() {
    document.getElementById('newWricefCode').value = '';
    document.getElementById('newWricefTitle').value = '';
    document.getElementById('newWricefDesc').value = '';
    document.getElementById('newWricefModule').value = '';
    document.getElementById('addWricefItemModal').style.display = 'flex';
}

async function saveNewWricefItem() {
    try {
        var body = {
            project_id: globalProjectId, code: document.getElementById('newWricefCode').value,
            wricef_type: document.getElementById('newWricefType').value, title: document.getElementById('newWricefTitle').value,
            description: document.getElementById('newWricefDesc').value, module: document.getElementById('newWricefModule').value
        };
        var res = await fetch('/api/wricef-items', {method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(body)});
        if (res.ok) { closeModal('addWricefItemModal'); loadWricefList(); }
        else { var d = await res.json(); alert(d.error||'Save failed'); }
    } catch(e) { alert('Error: '+e.message); }
}

// ========== Phase 6: Config List Functions ==========
async function loadConfigList() {
    try {
        var url = '/api/config-items?project_id=' + globalProjectId;
        var res = await fetch(url);
        var data = await res.json();
        
        var statusFilter = document.getElementById('configStatusFilter') ? document.getElementById('configStatusFilter').value : '';
        var moduleFilter = document.getElementById('configModuleFilter') ? document.getElementById('configModuleFilter').value : '';
        if (statusFilter) data = data.filter(function(c){ return c.status === statusFilter; });
        if (moduleFilter) data = data.filter(function(c){ return (c.module||'').indexOf(moduleFilter) >= 0; });
        
        var tbody = document.getElementById('configListBody');
        if (!tbody) return;
        
        if (!data.length) {
            tbody.innerHTML = '<tr><td colspan="7" style="text-align:center;color:#94a3b8;">No config items found.</td></tr>';
            return;
        }
        
        tbody.innerHTML = data.map(function(c) {
            return '<tr onclick="openConfigDetail('+c.id+')" style="cursor:pointer;">' +
                '<td>'+(c.code||'')+'</td><td>'+(c.title||'')+'</td><td>'+(c.module||'-')+'</td>' +
                '<td>'+(c.status||'')+'</td><td>'+(c.owner||'-')+'</td>' +
                '<td style="font-size:0.8em;color:#94a3b8;">'+(c.requirement_id||'-')+'</td>' +
                '<td><button class="btn btn-sm" onclick="event.stopPropagation();openConfigDetail('+c.id+')">Detail</button></td></tr>';
        }).join('');
    } catch(e) { console.error("Error loading config list:", e); }
}

async function openConfigDetail(id) {
    try {
        var res = await fetch('/api/config-items/' + id);
        var c = await res.json();
        currentConfigDetailId = id;
        document.getElementById('configDetCode').value = c.code || '';
        document.getElementById('configDetStatus').value = c.status || 'Open';
        document.getElementById('configDetTitle').value = c.title || '';
        document.getElementById('configDetModule').value = c.module || '';
        document.getElementById('configDetOwner').value = c.owner || '';
        document.getElementById('configDetDesc').value = c.description || '';
        document.getElementById('configDetDetails').value = c.config_details || '';
        document.getElementById('configDetUnitSteps').value = c.unit_test_steps || '[]';
        document.getElementById('configDetSourceReq').innerHTML = c.requirement_id ? '<small style="color:#94a3b8;">Source Requirement ID: '+c.requirement_id+'</small>' : '';
        document.getElementById('configDetailModal').style.display = 'flex';
    } catch(e) { console.error(e); }
}

